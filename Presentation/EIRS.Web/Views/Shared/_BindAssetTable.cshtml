@model IList<usp_GetTaxPayerAssetList_Result>

@foreach (var vAsset in Model.Where(t => t.Active.GetValueOrDefault() == true))
{
    <tr>
        <td>@vAsset.AssetTypeName</td>
        <td>@vAsset.AssetName</td>
        <td>@vAsset.TaxPayerRoleName</td>
        <td>
            <div class="btn-group">
                <button type="button" class="btn btn-xs md-skip btn-theme dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Action <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li>
                        <a onclick="javascript:jsfn_ShowAssetDetails(@vAsset.TPAID)">Quick View</a>
                    </li>
                    @if (SessionManager.TaxPayerTypeID == 0)
                    {
                        <li>
                            <a onclick="javascript:jsfn_ChangeAssetLinkStatus(@vAsset.TPAID, @vAsset.TaxPayerID, @vAsset.TaxPayerTypeID)">
                                Remove Link
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </td>
    </tr>
}