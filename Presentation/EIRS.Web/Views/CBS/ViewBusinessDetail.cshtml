
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "ViewBusinessDetail";
}

<section class="alternate">
    <div class="container">

        <div class="title">
            <h1>
                Data Profiler
            </h1>
            <hr>
            <p>
                We have dumped all the business data to allow for accurate cleansing and profiling. Where you find duplicates, just select the one that best matches your business and click on proceed. Kindly use the search button below to begin
            </p>
        </div>

        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    Step 2: View Business Details
                </div>
                <adiv class="actions">
                    <a href="@Url.Action("SearchBusiness", "CBS")" class="">Return to Search</a>
                </adiv>
            </div>
            <div class="portlet-body">
                <div class="form-horizontal">
                    <div class="row">
                        <div class="col-sm-6">
                            <h4 class="redheader">Tax Payer Information</h4>
                            <div class="form-group">
                                <label class="control-label required-star col-sm-4">
                                    Tax Payer Type
                                </label>
                                <div class="col-sm-8">
                                    <select class="form-control">
                                        <option>Search Tax Payer Type</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label  required-star col-sm-4">
                                    Tax Payer Name
                                </label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" disabled />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label  required-star col-sm-4">
                                    Mobile Number
                                </label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" placeholder="Enter Mobile Number starting with 0 " />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-4">
                                    Other capture
                                </label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" placeholder="API Based" />
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <h4 class="redheader">Business Information</h4>
                            <div class="form-group">
                                <label class="control-label required-star col-sm-4">
                                    Tax Payer Role
                                </label>
                                <div class="col-sm-8">
                                    <select class="form-control">
                                        <option>Search Tax Payer Role</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-4">
                                    Asset Type
                                </label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" placeholder="Business" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-4">
                                    Business Name
                                </label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" placeholder="API Based" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-4">
                                    Business Address
                                </label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" placeholder="API Based" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="portlet-footer text-right">
                <a href="@Url.Action("ClaimBusiness", "CBS")" class="btn btn-theme"> Claim Business </a>
            </div>
        </div>

    </div>
</section>



