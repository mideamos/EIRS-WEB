@using EIRS.Common
@{
    ViewBag.Title = "Operation Manager - Create Certificate";
}


<div class="title">
    <h1>
        Operation Manager - Create Certificate
    </h1>
    <hr>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">Certificate List</div>
        <div class="actions">
            <a href="@Url.Action("Generate","Certificate")" class="btn btn-theme btn-block">Add New</a>
        </div>
    </div>
    <div class="portlet-body">
        <table class="dt-responsive table table-bordered v-middle" width="100%" id="tblCertificate">
            <thead class="red-th">
                <tr>
                    <th>Certificate Number</th>
                    <th>Certificate Type</th>
                    <th>Tax Year</th>
                    <th>Tax Payer Name</th>
                    <th class="none">RIN</th>
                    <th>Status</th>
                    <th class="action-th all">Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Footer {
    <script type="text/javascript" src="~/Scripts/jsCertificateList.js?v=@EIRS.Common.GlobalDefaultValues.VersionNumber"></script>
}


