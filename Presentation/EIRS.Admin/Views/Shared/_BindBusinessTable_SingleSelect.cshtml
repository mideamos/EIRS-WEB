@model IList<EIRS.BOL.usp_GetBusinessList_Result>
@using EIRS.Common

<table id="tbAsset" class="table table-striped table-bordered" width="100%">
    <thead>
        <tr>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Business RIN" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Business Name" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Business Type" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Business LGA" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Business Category" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Business Sector" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Business Sub Sector" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Business Structure" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Business Operations" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Status" />
            </th>
            <th style="width:10%"></th>
        </tr>
        <tr>
            <th data-class="expand">Business RIN</th>
            <th>Business Name</th>
            <th>Business Type</th>
            <th>LGA</th>
            <th>Business Category</th>
            <th>Business Sector</th>
            <th>Business Sub Sector</th>
            <th>Business Structure</th>
            <th>Business Operations</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.BusinessRIN</td>
                    <td>@item.BusinessName</td>
                    <td>@item.BusinessTypeName</td>
                    <td>@item.LGAName</td>
                    <td>@item.BusinessCategoryName</td>
                    <td>@item.BusinessSectorName</td>
                    <td>@item.BusinessSubSectorName</td>
                    <td>@item.BusinessStructureName</td>
                    <td>@item.BusinessOperationName</td>
                    <td>@item.ActiveText</td>
                    <td>
                        <label class="radio">
                            @Html.RadioButton("rbAsset", item.BusinessID, new { @onChange = "jsfn_SelectSingleAsset(this)", @data_assetid = item.BusinessID, @data_assetrin = item.BusinessRIN, @title = "Tick To Select" })
                            <i></i>
                        </label>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
