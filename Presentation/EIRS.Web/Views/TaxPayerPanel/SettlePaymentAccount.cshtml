@model IList<EIRS.BOL.usp_GetPaymentAccountList_Result>
@using EIRS.Common
@{
    Layout = "~/Views/Shared/_TaxPayerLayout.cshtml";
    ViewBag.Title = "Payment on Account List";
}

<div class="title">
    <h1>Payment on Account</h1>
    <hr />
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            List of Payment on Account
        </div>
        <div class="actions">

        </div>
    </div>
    <div class="portlet-body">
        <table class="dt-responsive table table-bordered v-middle" width="100%" id="tblPoA">
            <thead class="red-th">
                <tr>
                    <th class="all">Ref</th>
                    <th>Tax Payer</th>
                    <th class="all">Date</th>
                    <th>Amount</th>
                    <th>Method</th>
                    <th class="action-th all">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PaymentRefNo</td>
                        <td>@item.TaxPayerName</td>
                        <td>@item.PaymentDate</td>
                        <td>@item.Amount</td>
                        <td>@item.SettlementMethodName</td>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-theme dropdown-toggle md-skip btn-xs" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Action<span class="caret"></span>
                                </button><ul class="dropdown-menu">
                                    <li>
                                        <a onclick="javascript:jsfn_PaymentAccountDetails(@item.PaymentAccountID)">View Details</a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@{Html.RenderPartial("_PaymentAccountDetailPopup"); }


@section Footer {
    <script type="text/javascript" src="~/Scripts/jsTaxPayerPaymentAccountList.js?v=@EIRS.Common.GlobalDefaultValues.VersionNumber"></script>
}


