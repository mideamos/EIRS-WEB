@model EIRS.Web.Models.GenerateCertificateViewModel
@{

    ViewBag.Title = "Operation Manger - Create Certificate";
}

@section header {
    <link href="~/Content/Plugins/typeahead/typeahead.css" rel="stylesheet" />
}

<div class="title">
    <h1>
        Operation Manager - Create Certificate
    </h1>
    <hr>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            Add New Certificate
        </div>
    </div>
    <div class="portlet-body">
        @using (Html.BeginForm("Generate", "Certificate", FormMethod.Post, htmlAttributes: new { @id = "frmCertificate" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            if (ViewBag.Message != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Message
                </div>
            }

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.CertificateTypeID, htmlAttributes: new { @class = "control-label required-star" })
                        @Html.DropDownListFor(m => m.CertificateTypeID, (SelectList)ViewBag.CertificateTypeList, "Select Certificate Type", new { @class = "form-control bs-select", @tabindex = "1", @data_live_search = "true", @id= "cboCertificateType" })
                        @Html.ValidationMessageFor(model => model.CertificateTypeID, "", htmlAttributes: new { @class = "help-block" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.TaxPayerTypeID, htmlAttributes: new { @class = "control-label required-star" })
                        @Html.DropDownListFor(m => m.TaxPayerTypeID, (SelectList)ViewBag.TaxPayerTypeList, "Select Tax Payer Type", new { @class = "form-control bs-select", @tabindex = "2", @data_live_search = "true", @id= "cboTaxPayerType" })
                        @Html.ValidationMessageFor(model => model.TaxPayerTypeID, "", htmlAttributes: new { @class = "help-block" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.HiddenFor(model => model.TaxPayerID, new { @id = "hdnTaxPayerID" })
                        @Html.LabelFor(model => model.TaxPayerID, htmlAttributes: new { @class = "control-label required-star" })
                        @Html.TextBoxFor(model => model.TaxPayerName, "", new { @class = "form-control", @id = "txtTaxPayer", @autocomplete = "off", @placeholder = "Enter Tax Payer Name" })
                        @Html.ValidationMessageFor(model => model.TaxPayerID, "", htmlAttributes: new { @class = "help-block" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.ProfileID, htmlAttributes: new { @class = "control-label required-star" })
                        @Html.DropDownListFor(model => model.ProfileID, (SelectList)ViewBag.ProfileList, "Select Profile", new { @class = "form-control bs-select", @id = "cboProfile", @autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.ProfileID, "", htmlAttributes: new { @class = "help-block" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.AssetID, htmlAttributes: new { @class = "control-label required-star" })
                        @Html.DropDownListFor(model => model.AssetID, (SelectList)ViewBag.AssetList, "Select Asset", new { @class = "form-control bs-select", @id = "cboAsset", @autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.AssetID, "", htmlAttributes: new { @class = "help-block" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="text-right col-sm-12">
                    <div class="form-group">
                        <input type="submit" class="btn-theme btn" value="Save" tabindex="5" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@section Footer {
    <script src="~/Content/Plugins/typeahead/handlebars.min.js"></script>
    <script src="~/Content/Plugins/typeahead/typeahead.bundle.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jsGenerateCertificate.js?v=@GlobalDefaultValues.VersionNumber"></script>
}