@model EIRS.Web.Models.TaxClearanceCertificateViewModel

@{
    ViewBag.Title = "Add New Tax Clearance Certificate";
}

@section header {
    <link href="~/Content/Plugins/typeahead/typeahead.css" rel="stylesheet" />
}

<div class="title">
    <h1>
        Tax Clearance Certificate
    </h1>
    <hr>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            Add New Tax Clearance Certificate
        </div>
    </div>
    <div class="portlet-body">
        @using (Html.BeginForm("Add", "TaxClearanceCertificate", FormMethod.Post, htmlAttributes: new { @id = "frmTCC" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            if (ViewBag.Message != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Message
                </div>
            }

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.TaxPayerTypeID, htmlAttributes: new { @class = "control-label required-star" })
                        @Html.DropDownListFor(m => m.TaxPayerTypeID, (SelectList)ViewBag.TaxPayerTypeList, "Select Tax Payer Type", new { @class = "form-control bs-select", @tabindex = "1", @data_live_search = "true", @id = "cboTaxPayerType" })
                        @Html.ValidationMessageFor(model => model.TaxPayerTypeID, "", htmlAttributes: new { @class = "help-block" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.HiddenFor(model => model.TaxPayerID, new { @id = "hdnTaxPayerID" })
                        @Html.LabelFor(model => model.TaxPayerID, htmlAttributes: new { @class = "control-label required-star" })
                        @Html.TextBoxFor(model => model.TaxPayerName, "", new { @class = "form-control", @id = "txtTaxPayer", @autocomplete = "off", @placeholder = "Enter Tax Payer Name" })
                        @Html.ValidationMessageFor(model => model.TaxPayerID, "", htmlAttributes: new { @class = "help-block" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.TaxYear, htmlAttributes: new { @class = "control-label required-star" })
                        @Html.DropDownListFor(m => m.TaxYear, (SelectList)ViewBag.YearList, "Select Tax Year", new { @class = "form-control bs-select", @tabindex = "3", @data_live_search = "true", @id = "cboTaxYear" })
                        @Html.ValidationMessageFor(model => model.TaxYear, "", htmlAttributes: new { @class = "help-block" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.RequestRefNo, htmlAttributes: new { @class = "control-label required-star" })
                        @Html.TextBoxFor(model => model.RequestRefNo, htmlAttributes: new { @tabindex = "4", @placeholder = "Enter Request Ref No", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.RequestRefNo, "", htmlAttributes: new { @class = "help-block" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.SerialNumber, htmlAttributes: new { @class = "control-label required-star" })
                        @Html.TextBoxFor(model => model.SerialNumber, htmlAttributes: new { @tabindex = "5", @placeholder = "Enter Serial Number", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SerialNumber, "", htmlAttributes: new { @class = "help-block" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.SourceOfIncome, htmlAttributes: new { @class = "control-label required-star" })
                        @Html.TextBoxFor(model => model.SourceOfIncome, htmlAttributes: new { @tabindex = "6", @placeholder = "Enter Source Of Income", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SourceOfIncome, "", htmlAttributes: new { @class = "help-block" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.TaxPayerDetails, htmlAttributes: new { @class = "control-label required-star" })
                        @Html.TextAreaFor(model => model.TaxPayerDetails, htmlAttributes: new { @tabindex = "7", @placeholder = "Enter Tax Payer Details", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TaxPayerDetails, "", htmlAttributes: new { @class = "help-block" })

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="text-right col-sm-12">
                    <div class="form-group">
                        <input type="submit" class="btn-theme btn" value="Save" tabindex="5" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Footer {
    <script src="~/Content/Plugins/typeahead/handlebars.min.js"></script>
    <script src="~/Content/Plugins/typeahead/typeahead.bundle.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jsAddTaxClearanceCertificate.js"></script>
}