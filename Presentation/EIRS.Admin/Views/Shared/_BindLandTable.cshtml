@model IList<EIRS.BOL.usp_GetLandList_Result>
@using EIRS.Common

<table id="tbAsset" class="table table-striped table-bordered" width="100%">
    <thead>
        <tr>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Land RIN" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Street Name" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Town" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter LGA" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Ward" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Land Size – Length (Sqm)" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Land Size – Width (Sqm)" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter C_OF_O_Ref" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Land Purpose" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Land Ownership" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Latitude" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Longitude" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Status" />
            </th>
            <th style="width:10%"></th>
        </tr>
        <tr>
            <th data-class="expand">Land RIN</th>
            <th>Street Name</th>
            <th>Town</th>
            <th>LGA</th>
            <th>Ward</th>
            <th>Land Size – Length (Sqm) </th>
            <th>Land Size – Width (Sqm) </th>
            <th>C_OF_O_Ref</th>
            <th>Land Purpose</th>
            <th>Land Ownership</th>
            <th>Latitutde</th>
            <th>Longitude</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.LandRIN</td>
                    <td>@item.StreetName</td>
                    <td>@item.TownName</td>
                    <td>@item.LGAName</td>
                    <td>@item.WardName</td>
                    <td>@item.LandSize_Length</td>
                    <td>@item.LandSize_Width</td>
                    <td>@item.C_OF_O_Ref</td>
                    <td>@item.LandPurposeName</td>
                    <td>@item.LandOwnershipName</td>
                    <td>@item.Latitude</td>
                    <td>@item.Longitude</td>
                    <td>@item.ActiveText</td>
                    <td>
                        <label class="checkbox">
                            @Html.CheckBox("chkAsset_" + item.LandID, new { @onChange = "jsfn_SelectAsset(this)", @data_assetid = item.LandID, @title = "Tick To Select" })
                            <i></i>
                        </label>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
