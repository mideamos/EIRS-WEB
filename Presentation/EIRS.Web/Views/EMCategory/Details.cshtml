@model EIRS.BOL.usp_EM_GetCategoryList_Result

@{
    ViewBag.Title = "Manage Classification Category";
}

<div class="title">
    <h1>
        Classification Categories
    </h1>
    <hr>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            Category Details
        </div>
        <div class="actions">
            <a href="@Url.Action("List","EMCategory")" class="btn btn-redtheme"> Cancel </a>
        </div>
    </div>
    <div class="portlet-body">
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label class="control-label bold">Category Name: </label>
                    <div class="form-control-static">
                        @Model.CategoryName
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label bold">Status: </label>
                    <div class="form-control-static">
                        @Model.ActiveText
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
