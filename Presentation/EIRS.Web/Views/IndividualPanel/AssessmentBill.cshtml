@model IList<EIRS.BOL.usp_GetAssessmentList_Result>
@using EIRS.Common
@{
    ViewBag.Title = "Assessment Bill List";
}

<div class="title">
    <h1>
        Assessment Bill
    </h1>
    <hr>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">Assessment Bill</div>
        <div class="actions">

        </div>
    </div>
    <div class="portlet-body">
        <table class="dt-responsive table table-bordered v-middle" width="100%" id="tblAssessment">
            <thead class="red-th">
                <tr>
                    <th>Bill Ref</th>
                    <th>Tax payer name</th>
                    <th class="desktop">Date</th>
                    <th>Amount</th>
                    <th class="desktop">Status</th>
                    <th class="action-th all">Action</th>
                </tr>
            </thead>
            <tbody class="red-th">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.AssessmentRefNo</td>
                        <td>@item.TaxPayerName</td>
                        <td>@item.AssessmentDate</td>
                        <td>@item.AssessmentAmount</td>
                        <td>@item.SettlementStatusName</td>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-theme dropdown-toggle md-skip btn-xs" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Action<span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a onclick="javascript:jsfn_BillDetails(@item.AssessmentID)">
                                            Quick View
                                        </a>
                                    </li>
                                    <li>
                                        <a onclick="javascript:jsfn_BillPaymentDetails(@item.AssessmentID)">
                                            View Payments
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

@{
    Html.RenderPartial("_AssessmentDetailPopup");
    Html.RenderPartial("_BillPaymentPopup");
}

@section footer{
    <script type="text/javascript" src="~/Scripts/jsTaxPayerAssessmentBill.js"></script>
}