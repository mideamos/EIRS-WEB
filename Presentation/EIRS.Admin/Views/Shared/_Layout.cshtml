@using EIRS.Common

<!DOCTYPE html>
<html lang="en-us" id="@ViewBag.PageId" class="smart-style-3">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title> @ViewBag.Title || EIRS Automation </title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <!-- Basic Styles -->
    <link rel="stylesheet" type="text/css" media="screen" href="/Content/Styles/bootstrap.css">
    <link rel="stylesheet" type="text/css" media="screen" href="/Content/Styles/font-awesome.css">

    <!-- Styles : Caution! DO NOT change the order -->
    <link rel="stylesheet" type="text/css" media="screen" href="/Content/Styles/production-plugins.css">
    <link rel="stylesheet" type="text/css" media="screen" href="/Content/Styles/production.css">
    <link rel="stylesheet" type="text/css" media="screen" href="/Content/Styles/skins.css">

    <!--TEST-->
    @*<link rel="stylesheet" type="text/css" media="screen" href="~/Content/Styles/buttons.css">*@

    <link rel="stylesheet" type="text/css" media="screen" href="/Content/Styles/custom_style.css">

    <!-- FAVICONS -->
    @*<link rel="shortcut icon" href="/Content/Images/favicon/favicon.ico" type="image/x-icon">
        <link rel="icon" href="/Content/Images/favicon/favicon.ico" type="image/x-icon">*@

    <!-- GOOGLE FONT -->
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,300,400,700">

    @*<link rel="apple-touch-icon" href="~/content/img/splash/sptouch-icon-iphone.png">
        <link rel="apple-touch-icon" sizes="76x76" href="~/content/img/splash/touch-icon-ipad.png">
        <link rel="apple-touch-icon" sizes="120x120" href="~/content/img/splash/touch-icon-iphone-retina.png">
        <link rel="apple-touch-icon" sizes="152x152" href="~/content/img/splash/touch-icon-ipad-retina.png">*@

    <!-- iOS web-app metas : hides Safari UI Components and Changes Status Bar Appearance -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">

    <!-- Startup image for web apps -->
    @*<link rel="apple-touch-startup-image" href="~/content/img/splash/ipad-landscape.png" media="screen and (min-device-width: 481px) and (max-device-width: 1024px) and (orientation:landscape)">
        <link rel="apple-touch-startup-image" href="~/content/img/splash/ipad-portrait.png" media="screen and (min-device-width: 481px) and (max-device-width: 1024px) and (orientation:portrait)">
        <link rel="apple-touch-startup-image" href="~/content/img/splash/iphone.png" media="screen and (max-device-width: 320px)">*@
</head>
<body class="@ViewBag.PageClass smart-style-3">
    <div id="domMessage" style="display:none;">
        <h4>We are processing your request.  Please be patient.</h4>
    </div>
    @{ Html.RenderPartial("_Header", RenderSection("topright", false)); }
    @{ Html.RenderPartialIf("_Aside", SessionManager.SystemUserID > 0); }
    <div id="main" role="main">
        @{ Html.RenderPartialIf("_Ribbon", SessionManager.SystemUserID > 0); }
        <div class="content" id="dvAlertConatiner">
            @Html.RenderFlashMessages()
        </div>
        @RenderBody()
    </div>
    @if (SessionManager.SystemUserID > 0)
    {
        Html.RenderPartial("_Footer");
    }

    <div id="dvUpdateDialog" class="hide" title="Edit Record Confirmation">
        <p>
            Editing a record will edit all related records. Do you wish to continue?
        </p>
    </div>
    <div id="dvRemoveDialog" class="hide" title="Remove Record Confirmation">
        <input type="hidden" id="hdnTBID" value="0" />
        <input type="hidden" id="hdnOtherID" value="0" />
        <p>
            Removing a record will remove all related records. Do you wish to continue?
        </p>
    </div>
    <script type="text/javascript">
        window.cdnLink = '/Content/';
    </script>
    <script src="/Content/Scripts/jquery.min.js" type="text/javascript"></script>
    <script src="/Content/Scripts/jquery-ui.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="/Content/Scripts/jquery.blockui.min.js"></script>
    <script src="/Scripts/app.config.js"></script>
    <script src="/Content/plugins/bootstrap/bootstrap.min.js" type="text/javascript"></script>
    <script src="/Content/plugins/smartwidgets/jarvis.widget.min.js"></script>
    <script src="/Content/plugins/select2/select2.min.js"></script>
    <script src="/Content/plugins/msie-fix/jquery.mb.browser.min.js"></script>
    <script src="/Content/plugins/notification/SmartNotification.min.js"></script>

    <script src="/Content/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/Content/plugins/datatables/dataTables.colVis.min.js"></script>
    <script src="/Content/plugins/datatables/dataTables.tableTools.min.js"></script>
    <script src="/Content/plugins/datatables/dataTables.bootstrap.min.js"></script>
    <script src="/Content/plugins/datatable-responsive/datatables.responsive.min.js"></script>

    <!--TEST-->
    @*<script src="~/Content/plugins/datatables/buttons.bootstrap.js"></script>*@

    <script src="/Content/plugins/masked-input/jquery.maskedinput.min.js"></script>
    <script src="/Content/plugins/moment/moment.js"></script>


    <!--[if IE 8]>
        <h1>Your browser is out of date, please update your browser by going to www.microsoft.com/download</h1>
        <![endif]-->
    <!-- IMPORTANT: APP CONFIG -->
    <!-- MAIN APP JS FILE -->
    <script src="~/Scripts/app.min.js"></script>

    <script type="text/javascript" src="/Content/Scripts/jquery.validate.min.js"></script>
    <script type="text/javascript" src="/Content/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript" src="/Content/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript" src="/Scripts/date.format.js"></script>
    <script type="text/javascript" src="/Content/Scripts/jsCommon.js"></script>
    <script type="text/javascript" src="~/Scripts/jsCustomValidator.js"></script>
    <script type="text/javascript" src="~/Scripts/jsLayout.js"></script>



    @RenderSection("Footer", false)
</body>

</html>