@using EIRS.Common
@{
    ViewBag.Title = "Operation Manager - Process TCC Requests";
}


<div class="title">
    <h1>
        Operation Manager - Process TCC Requests
    </h1>
    <hr>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">TCC Requests</div>
        <div class="actions">
            <a href="@Url.Action("Add","ProcessTCCRequest")" class="btn btn-theme btn-block">Add New</a>
        </div>
    </div>
    <div class="portlet-body">
        <table class="dt-responsive table table-bordered v-middle" width="100%" id="tblRequest">
            <thead class="red-th">
                <tr>
                    <th>Request Ref</th>
                    <th>Tax Year</th>
                    <th>Tax Payer Name</th>
                    <th class="none">RIN</th>
                    <th class="none">Mobile Number</th>
                    <th>Request Date</th>
                    <th>Request Status</th>
                    <th class="action-th all">Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Footer {
    <script type="text/javascript" src="~/Scripts/jsTCCRequestList.js?v=@EIRS.Common.GlobalDefaultValues.VersionNumber"></script>
}


