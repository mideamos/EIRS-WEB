@model IList<EIRS.BOL.usp_GetBuildingUnitList_Result>

@{
    ViewBag.Title = "Building Unit List";
}

<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-lg fa-fw fa-building"></i>
                Building Unit
            </h1>
        </div>
        <div class="col-xs-12 col-sm-5 text-right">
            <a href="@Url.Action("Add","BuildingUnit")" class="btn btn-default">
                Add Building Unit
            </a>
        </div>
    </div>
    <section id="widget-grid">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-green" data- id="dvBuildingUnitList">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Building Unit List </h2>
                        <div class="widget-toolbar">
                            <a href="@Url.Action("Add","BuildingUnit")" class="btn btn-primary">Add Building Unit </a>
                        </div>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                            <input class="form-control" type="text">
                        </div>
                        <div class="widget-body no-padding">
                            <table id="tbBuildingUnit" class="table table-striped table-bordered" width="100%">
                                <thead>
                                    <tr>
                                        <th class="hasinput" style="width:25%">
                                            <input type="text" class="form-control" placeholder="Filter Unit Number" id="txtUnitNumber"/>
                                        </th>
                                        <th class="hasinput" style="width:25%">
                                            <input type="text" class="form-control" placeholder="Filter Unit Purpose" id="txtUnitPurpose"/>
                                        </th>
                                        <th class="hasinput" style="width:25%">
                                            <input type="text" class="form-control" placeholder="Filter Unit Function" id="txtUnitFunction"/>
                                        </th>
                                        <th class="hasinput" style="width:25%">
                                            <input type="text" class="form-control" placeholder="Filter Unit Occupancy" id="txtUnitOccupancy"/>
                                        </th>
                                        <th class="hasinput" style="width:25%">
                                            <input type="text" class="form-control" placeholder="Filter Unit Size" id="txtUnitSize"/>
                                        </th>
                                        <th class="hasinput" style="width:25%">
                                            <input type="text" class="form-control" placeholder="Filter Status" id="txtStatus"/>
                                        </th>
                                        <th style="width:25%"></th>
                                    </tr>
                                    <tr>
                                        <th data-class="expand">Unit Number</th>
                                        <th>Unit Purpose</th>
                                        <th>Unit Function</th>
                                        <th>Unit Occupancy</th>
                                        <th>Unit Size</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

@section Footer {
    <script Unit="text/javascript" src="~/Scripts/jsBuildingUnitList.js"></script>
}

