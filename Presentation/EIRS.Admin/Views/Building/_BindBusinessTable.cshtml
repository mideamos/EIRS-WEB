@model IList<EIRS.BOL.usp_GetBusinessBuildingList_Result>
@using EIRS.Common

@if (Model != null && Model.Count > 0)
{
    foreach (var item in Model)
    {
        <tr>
            <td>@item.BusinessRIN</td>
            <td>@item.BusinessName</td>
            <td>@item.UnitNumber</td>
            <td>
                <div class="btn-group">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                        Actions
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a onclick="javascript:jsfn_ShowDetails(@item.BBID)">
                                View Details
                            </a>
                        </li>
                        <li>
                            <a onclick="javascript:jsfn_RemoveLink(@item.BBID,@item.BuildingID)">
                                Remove Business
                            </a>
                        </li>
                    </ul>
                </div>
            </td>
        </tr>
    }
}


