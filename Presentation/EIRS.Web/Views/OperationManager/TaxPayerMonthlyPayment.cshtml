@using EIRS.Common;
@{
    ViewBag.Title = "Operation Manager - Tax Payer Monthly Payment";
}

@section header {
    <link href="~/Content/Plugins/typeahead/typeahead.css" rel="stylesheet" />
}

<div class="title">
    <h1>
        Operation Manager - Tax Payer Monthly Payment
    </h1>
    <hr>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            Search Filters
        </div>
    </div>
    <div class="portlet-body">
        <form id="frmTaxPayerMonthlyPayment" class="form-horizontal">
            <div class="row">
                <div class="col-sm-7">
                    <div class="form-group">
                        <label class="col-md-4 control-label">Tax Payer Type:</label>
                        <div class="col-md-8">
                            @Html.DropDownList("TaxPayerTypeID", (SelectList)ViewBag.TaxPayerTypeList, "Select Tax Payer Type", new { @class = "form-control bs-select", @id = "cboTaxPayerType" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Tax Payer:</label>
                        <div class="col-md-8">
                            @Html.Hidden("TaxPayerID","", new { @id = "hdnTaxPayerID" })
                            @Html.TextBox("TaxPayerName", "", new { @class = "form-control", @id = "txtTaxPayer", @autocomplete = "off", @placeholder = "Enter Tax Payer Name" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Year:</label>
                        <div class="col-md-8">
                            @Html.DropDownList("Year", (SelectList)ViewBag.YearList, "Select Year", new { @class = "form-control bs-select", @id = "cboYear" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Revenue Stream:</label>
                        <div class="col-md-8">
                            @Html.DropDownList("RevenueStream", (SelectList)ViewBag.RevenueStreamList, "Select Revenue Stream", new { @class = "form-control bs-select", @id = "cboRevenueStream" })
                        </div>
                    </div>
                    <div class="form-group text-right row">
                        <div class="col-sm-6"></div>
                        <div class="col-sm-6">
                            <button class="btn btn-theme btn-block" id="btnSearch" type="button" tabindex="4"> Search </button>
                        </div>
                    </div>

                    <div class="col-sm-5">

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="portlet light" id="dvSearchData">
    <div class="portlet-title">
        <div class="caption">Tax Payer Monthly Payments</div>
        <div class="form-actions text-right">
            <button type="button" id="btnExportToExcel" class="btn btn-theme">Export To Excel</button>
        </div>
    </div>
    <div class="portlet-body" id="dvData">
        <table class="dt-responsive table table-bordered v-middle" width="100%" id="tblTaxPayerMonthlyPayment">
            <thead class="red-th">
                <tr>
                    <th>Month</th>
                    <th>Settlements</th>
                    <th>Payments on Account</th>
                    <th>Total</th>
                    <th class="action-th all">Action</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Total</th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>



@section Footer {
    <script src="~/Content/Plugins/typeahead/handlebars.min.js"></script>
    <script src="~/Content/Plugins/typeahead/typeahead.bundle.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jsTaxPayerMonthlyPayment.js?v=@EIRS.Common.GlobalDefaultValues.VersionNumber"></script>
}




