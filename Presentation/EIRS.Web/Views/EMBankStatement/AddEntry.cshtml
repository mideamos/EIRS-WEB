@model EIRS.Web.Models.EMBSViewModel

@{
    ViewBag.Title = "ERAS Manual - Bank Statement - Add Entry";
}

<div class="title">
    <h1>
        ERAS Manual - Bank Statement - Add Entry
    </h1>
    <hr>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            Add Entry
        </div>
        <div class="actions">
            <a href="@Url.Action("DataSource","ERASManual")" class="btn btn-redtheme"> Cancel </a>
        </div>
    </div>
    <div class="portlet-body">
        @using (Html.BeginForm("AddEntry", "EMBankStatement", FormMethod.Post, htmlAttributes: new { @id = "frmAddIGRClassification" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            if (ViewBag.Message != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Message
                </div>
            }

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.TaxMonth, htmlAttributes: new { @class = "control-label required-star" })
                        @Html.DropDownListFor(model => model.TaxMonth, (SelectList)ViewBag.MonthList, "Select Month", htmlAttributes: new { @class = "form-control bs-select", @tabindex = "1", @placeholder = "Select Month" })
                        @Html.ValidationMessageFor(model => model.TaxMonth, "", htmlAttributes: new { @class = "help-block" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.TaxYear, htmlAttributes: new { @class = "control-label required-star" })
                        @Html.DropDownListFor(model => model.TaxYear, (SelectList)ViewBag.YearList, "Select Year", htmlAttributes: new { @class = "form-control bs-select", @tabindex = "2", @placeholder = "Select Year" })
                        @Html.ValidationMessageFor(model => model.TaxYear, "", htmlAttributes: new { @class = "help-block" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.PaymentRefNumber, htmlAttributes: new { @class = "control-label required-star" })
                        @Html.TextBoxFor(model => model.PaymentRefNumber, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.PaymentRefNumber, "", htmlAttributes: new { @class = "help-block" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.PaymentDateTime, htmlAttributes: new { @class = "control-label required-star" })
                        @Html.TextBoxFor(model => model.PaymentDateTime, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.PaymentDateTime, "", htmlAttributes: new { @class = "help-block" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "control-label required-star" })
                        @Html.TextBoxFor(model => model.Category, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Category, "", htmlAttributes: new { @class = "help-block" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.RevenueHead, htmlAttributes: new { @class = "control-label required-star" })
                        @Html.TextBoxFor(model => model.RevenueHead, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.RevenueHead, "", htmlAttributes: new { @class = "help-block" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.CustomerName, htmlAttributes: new { @class = "control-label required-star" })
                        @Html.TextBoxFor(model => model.CustomerName, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CustomerName, "", htmlAttributes: new { @class = "help-block" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label required-star" })
                        @Html.TextBoxFor(model => model.Amount, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Amount, "", htmlAttributes: new { @class = "help-block" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Bank, htmlAttributes: new { @class = "control-label required-star" })
                        @Html.TextBoxFor(model => model.Bank, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Bank, "", htmlAttributes: new { @class = "help-block" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="text-right col-sm-12">
                    <div class="form-group">
                        <input type="submit" class="btn-theme btn" value="Save" tabindex="25" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

