@model IList<EIRS.BOL.usp_GetScreenList_Result>

@{
                /**/

                ViewBag.Title = "Manage Screen";
}

<div class="title">
    <h1>
        Manage Screens : Screen List
    </h1>
    <hr>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            Search Filters
        </div>
    </div>
    <div class="portlet-body">
        <div class="row">
            @using (Ajax.BeginForm("List", "Screen", new AjaxOptions() { UpdateTargetId = "dvData", AllowCache = true, HttpMethod = "Post", OnSuccess = "jsfn_bindTable();", OnBegin = "jsfn_ShowLoading", OnComplete = "jsfn_HideLoading" }))
            {
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="control-label">Screen Name</label>
                        @Html.TextBox("txtFilter", "", new { @class = "form-control", @placeholder = "Enter Screen Name", @tabindex = "1" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="control-label">Status</label>
                        @Html.DropDownList("cboStatus", (IList<SelectListItem>)ViewBag.StatusList, new { @class = "form-control bs-select", @tabindex = "2" })
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group text-right">
                        <button class="btn btn-theme" tabindex="3"> Search </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">Screen List</div>
        <div class="actions">

        </div>
    </div>
    <div class="portlet-body" id="dvData">
        @{Html.RenderPartial("SearchData", Model);}
    </div>
</div>


@section footer{
    <script type="text/javascript" src="~/Scripts/jsScreenList.js?v=@EIRS.Common.GlobalDefaultValues.VersionNumber"></script>
}



