@{
    ViewBag.Title = "MDA Service List";
}

<div class="title">
    <h1>
        MDA Service
    </h1>
    <hr>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">MDA Service</div>
        <div class="actions">
            <a href="@Url.Action("ExportData","MDAService")" target="_blank" class="btn btn-theme">Export To Excel</a>
            <div class="btn-group">
                <button type="button" class="btn btn-redtheme dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Tax Year <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li>
                        <a onclick="javascript: jsfn_FilterMDAServiceTable(2018);">2018</a>
                    </li>
                    <li>
                        <a onclick="javascript: jsfn_FilterMDAServiceTable(2019);">2019</a>
                    </li>
                    <li>
                        <a onclick="javascript: jsfn_FilterMDAServiceTable(2020);">2020</a>
                    </li>
                    <li>
                        <a onclick="javascript: jsfn_FilterMDAServiceTable(2021);">2021</a>
                    </li>
                    <li>
                        <a onclick="javascript: jsfn_FilterMDAServiceTable(2022);">2022</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="portlet-body">
        <table class="dt-responsive table table-bordered v-middle" width="100%" id="tblMDAService">
            <thead class="red-th">
                <tr>
                    <th>Tax Year</th>
                    <th>Service Name</th>
                    <th class="desktop">Run</th>
                    <th>Frequency</th>
                    <th>Amount</th>
                    <th class="action-th all">Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@{
    Html.RenderPartial("_MDAServiceDetailPopup");
    Html.RenderPartial("_MDAServiceItemPopup");
}

@section Footer {
    <script type="text/javascript" src="~/Scripts/jsMDAServiceListWithExport.js?v=@EIRS.Common.GlobalDefaultValues.VersionNumber"></script>
}
