@model IList<ServiceBill_MDAServiceItem>
@using EIRS.Common

@if (Model.Count > 0)
{
    foreach (var item in Model)
    {
        <tr>
            <td>@item.MDAServiceItemReferenceNo</td>
            <td>@item.MDAServiceItemName</td>
            <td>@item.ServiceAmount.ToString("N2")</td>
            <td>
                <div class="btn-group">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                        &nbsp;&nbsp; Actions
                        <span class="caret"></span>&nbsp;&nbsp;
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a onclick="javascript:jsfn_ShowMDAServiceItemDetails(@item.MDAServiceItemID)">
                                View
                            </a>
                        </li>
                        @if (item.ComputationID == 2)
                        {
                        <li>
                            <a onclick="javascript:jsfn_EditServiceAmount(@item.RowID,@item.ServiceBaseAmount)">
                                Edit Service Amount
                            </a>
                        </li>
                        }
                    </ul>
                </div>
            </td>
        </tr>
    }

    <tr>
        <td colspan="2">Total</td>
        <td>@Model.Sum(t => t.ServiceAmount).ToString("N2")</td>
        <td></td>
    </tr>
}
else
{
    <tr>
        <td colspan="4" align="center">No Records Found.</td>
    </tr>
}


