@{
    ViewBag.Title = "Treasury Receipt List";
}

<input type="hidden" value="@ViewBag.FromDate" id="hdnFromDate" />
<input type="hidden" value="@ViewBag.ToDate" id="hdnToDate" />
<input type="hidden" value="@ViewBag.RevenueStream" id="hdnRevenueStream" />
<input type="hidden" value="@ViewBag.TaxYear" id="hdnTaxYear" />

<div class="title">
    <h1>
        Operation Manager - Treasury Receipts by Revenue Stream
    </h1>
    <hr>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            Treasury Receipt List
        </div>
        <div class="form-actions text-right">
            <a href="@Url.Action("TreasuryReceiptByRevenueStream","OperationManager")" class="btn btn-redtheme">Cancel</a>
            <a href="@Url.Action("TreasuryReceiptByRevenueStreamDetailExportToExcel","OperationManager",new { RevenueStreamID=ViewBag.RevenueStream,FromDate= ViewBag.FromDate,ToDate=ViewBag.ToDate,TaxYear = ViewBag.TaxYear })" class="btn btn-theme">Export Excel</a>
        </div>
    </div>
    <div class="portlet-body">

        <table class="dt-responsive table table-bordered v-middle" width="100%" id="tblTreasuryReceiptDetailsByRevenueStream">
            <thead class="red-th">
                <tr>
                    <th>Tax Payer</th>
                    <th>Receipt Ref</th>
                    <th>Receipt Date</th>
                    <th>Amount</th>
                    <th class="none">Generated By</th>
                    <th class="action-th all">Action</th>
                </tr>
            </thead>
        </table>
    </div>

</div>
@section Footer {
    <script type="text/javascript" src="~/Scripts/jsTreasuryReceiptByRevenueStreamDetails.js?v=@EIRS.Common.GlobalDefaultValues.VersionNumber"></script>
}
