@model EIRS.Models.TaxOfficeViewModel

@{
    ViewBag.Title = "Tax Office Details";
    IList<TaxOfficeAddress> lstTaxOfficeAddress = (IList<TaxOfficeAddress>)ViewBag.TaxOfficeAddressList;
}

<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-lg fa-fw fa-th-list"></i>
                Tax Office
            </h1>
        </div>
        <div class="col-xs-12 col-sm-5 text-right">
        </div>
    </div>
    <section id="widget-grid">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
                <div class="jarviswidget jarviswidget-color-green" id="dvTaxOfficeDetails">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-eye"></i> </span>
                        <h2>Tax Office</h2>
                    </header>
                    <div class="content">
                        <div class="jarviswidget-editbox">
                            <input class="form-control" type="text">
                        </div>
                        <div class="widget-body" id="dvTaxOfficeRecordLink">
                            <div class="form-horizontal">
                                <fieldset>
                                    <legend>Tax Office Details</legend>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label control-label-static">Zone</label>
                                        <div class="col-md-10 form-control-static">
                                            @Model.ZoneName
                                        </div>
                                    </div> 
                                    <div class="form-group">
                                        <label class="col-md-2 control-label control-label-static">Tax Office</label>
                                        <div class="col-md-10 form-control-static">
                                            @Model.TaxOfficeName
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label control-label-static">Status</label>
                                        <div class="col-md-10 form-control-static">
                                            @Model.ActiveText
                                        </div>
                                    </div>
                                    <div class="dd">
                                        <ol class="dd-list">
                                            <li class="dd-item">
                                                <div class="dd-handle">
                                                    <i class="fa fa-chevron-right"></i> <a id="aTaxOfficeAddress">Tax Office Address  - <span id="spnTOARecordCount">@SessionManager.lstTaxOfficeAddress.Count()</span> Values</a>
                                                </div>
                                            </li>
                                        </ol>
                                    </div>
                                </fieldset>

                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <a class="btn btn-default" href="@Url.Action("List","TaxOffice")">
                                                Back
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="widget-body no-padding" id="dvTaxOfficeAddressList">
                            <div class="smart-form" >
                                <header>
                                    Record Link - Tax Office Addresses
                                </header>

                                <fieldset>
                                    <table id="tbTaxOffice" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Address Type</th>
                                                <th>Building RIN</th>
                                                <th>Building Name</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (lstTaxOfficeAddress.Count > 0)
                                            {
                                                foreach (var item in lstTaxOfficeAddress)
                                                {
                                                    <tr>
                                                        <td>@item.AddressTypeName</td>
                                                        <td>@item.BuildingRIN</td>
                                                        <td>@item.BuildingName</td>
                                                        <td>
                                                            <div class="btn-group">
                                                                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                                                                    &nbsp;&nbsp; Actions
                                                                    <span class="caret"></span>&nbsp;&nbsp;
                                                                </button>
                                                                <ul class="dropdown-menu" role="menu">
                                                                    <li>
                                                                        <a onclick="javascript:jsfn_ShowBuildingDetails(@item.BuildingID)">
                                                                            View
                                                                        </a>
                                                                    </li>
                                                                </ul>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td colspan="4" align="center">No Records Found.</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </fieldset>
                                <footer>
                                    <a id="btnTOABack" class="btn btn-default">
                                        Back
                                    </a>
                                </footer>
                            </div>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
<div id="dvBuildingDetails" title="Building Details">
    <div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label control-label-static">Building RIN</label>
                    <div id="dvBuildingRIN">

                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label control-label-static">Building Tag Number</label>
                    <div id="dvBuildingTagNumber">

                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label control-label-static">Building Name</label>
                    <div id="dvBuildingName">

                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label control-label-static">Building Number</label>
                    <div id="dvBuildingNumber">

                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label control-label-static">Street Name</label>
                    <div id="dvStreetName">

                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label control-label-static">Off Street Name</label>
                    <div id="dvOffStreetName">

                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label control-label-static">Town</label>
                    <div id="dvTown">

                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label control-label-static">LGA</label>
                    <div id="dvLGA">

                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label control-label-static">Ward</label>
                    <div id="dvWard">

                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label control-label-static">Asset Type</label>
                    <div id="dvAssetType">

                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label control-label-static">Building Type</label>
                    <div id="dvBuildingType">

                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label control-label-static">Building Completion</label>
                    <div id="dvBuildingCompletion">

                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label control-label-static">Building Purpose</label>
                    <div id="dvBuildingPurpose">

                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label control-label-static">Building Function</label>
                    <div id="dvBuildingFunction">

                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label control-label-static">Building Ownership</label>
                    <div id="dvBuildingOwnership">

                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label control-label-static">Building Occupancy</label>
                    <div id="dvBuildingOccupancy">

                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label control-label-static">Occupancy Type</label>
                    <div id="dvBuildingOccupancyType">

                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label control-label-static">Latitude</label>
                    <div id="dvLatitude">

                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label control-label-static">Longitude</label>
                    <div id="dvLongitude">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Footer {
    <script Function="text/javascript" src="~/Scripts/jsTaxOfficeView.js"></script>
}
