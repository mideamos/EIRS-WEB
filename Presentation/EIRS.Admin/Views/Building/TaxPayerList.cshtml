@model IList<EIRS.BOL.usp_GetTaxPayerAssetList_Result>
@using EIRS.Common
@{
    ViewBag.Title = "Tax Payer List";
}

<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-lg fa-fw fa-th-list"></i>
                Tax Payer Information for @ViewBag.AssetName
            </h1>
        </div>
        <div class="col-xs-12 col-sm-5 text-right">
            <a href="@Url.Action("List", "Building")" class="btn btn-default margin-right-5">
                Back
            </a>
            <a href="@Url.Action("AddTaxPayer", "Building", new { id = ViewBag.AssetID, name = ViewBag.AssetRIN })" class="btn btn-primary">
                Add Tax Payer Link
            </a>
        </div>
    </div>
    <section id="widget-grid">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-green" data- id="dvBuildingTaxPayerList">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Tax Payer Information </h2>
                        <div class="widget-toolbar">
                            <a href="@Url.Action("AddTaxPayer", "Building", new { id = ViewBag.AssetID, name = ViewBag.AssetRIN })" class="btn btn-primary">Add Tax Payer Link </a>
                        </div>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                            <input class="form-control" type="text">
                        </div>
                        <div class="widget-body no-padding">
                            <table id="tbTaxPayerAsset" class="table table-striped table-bordered" width="100%">
                                <thead>
                                    <tr>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Tax Payer Type" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Tax Payer Role" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Tax Payer RIN" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Status" />
                                        </th>
                                        <th style="width:25%"></th>
                                    </tr>
                                    <tr>
                                        <th data-class="expand">Tax Payer Type</th>
                                        <th>Tax Payer Role</th>
                                        <th>Tax Payer RIN</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody id="tbody">
                                    @{Html.RenderPartial("_BindTaxPayerTable", Model);}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

@{
    Html.RenderPartial("_IndividualDetailPopup");
    Html.RenderPartial("_CompanyDetailPopup");
    Html.RenderPartial("_GovernmentDetailPopup");
    Html.RenderPartial("_SpecialDetailPopup");
}

@section Footer {
    <script type="text/javascript" src="~/Scripts/jsBuildingTaxPayerList.js"></script>
}

