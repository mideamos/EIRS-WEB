@model EIRS.Models.APIViewModel

@{
    ViewBag.Title = "API Details";
    ViewBag.PageHeader = "Manage API<small> api details</small>";
}

<div class="title">
    <h1>
        Manage API : API Details
    </h1>
    <hr>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            API Details
        </div>
        <div class="actions">
            <a href="@Url.Action("List","API")" class="btn btn-redtheme"> Cancel </a>
        </div>
    </div>
    <div class="portlet-body">
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label class="control-label bold">API Name: </label>
                    <div class="form-control-static">
                        @Model.APIName
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group">
                    <label class="control-label bold">API Description: </label>
                    <div class="form-control-static">
                        @Model.APIDescription
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label bold">Status: </label>
                    <div class="form-control-static">
                        @Model.ActiveText
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
