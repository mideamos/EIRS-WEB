@model IList<EIRS.BOL.usp_GetMDAServiceList_Result>

@{
    ViewBag.Title = "MDA Service List";
}

<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-lg fa-fw fa-life-saver"></i>
                MDA Service
            </h1>
        </div>
        <div class="col-xs-12 col-sm-5 text-right">
            <a href="@Url.Action("Add","MDAService")" class="btn btn-default">
                Add MDA Service
            </a>
        </div>
    </div>
    <section id="widget-grid">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-green" data- id="dvMDAServiceList">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>MDA Service List </h2>
                        <div class="widget-toolbar">
                            <a href="@Url.Action("Add","MDAService")" class="btn btn-primary">Add MDA Service </a>
                        </div>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                            <input class="form-control" type="text">
                        </div>
                        <div class="widget-body no-padding">
                            <table id="tbMDAService" class="table table-striped table-bordered" width="100%">
                                <thead>
                                    <tr>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter MDA Service Code" id="txtMDAServiceCode"/>
                                        </th>                           
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter MDA Service Name" id="txtMDAServiceName"/>
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Rule Run" id="txtRuleRunName"/>
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Frequency" id="txtFrequencyName"/>
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter MDA Service Items" id="txtMDAServiceItems"/>
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Service Amount" id="txtServiceAmount"/>
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Tax Year" id="txtTaxYear"/>
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Settlement Method" id="txtSettlementMethodName"/>
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Payment Options" id="txtPaymentOption"/>
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Status" id="txtStatus"/>
                                        </th>
                                        <th></th>
                                    </tr>
                                    <tr>
                                        <th data-class="expand">MDA Service Code</th>
                                        <th>MDA Service Name</th>
                                        <th>Rule Run</th>
                                        <th>Frequency</th>
                                        <th>MDA Service Items</th>
                                        <th>Service Amount</th>
                                        <th>Tax Year</th>
                                        <th>Settlement Method</th>
                                        <th>Payment Options</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

@section Footer {
    <script Function="text/javascript" src="~/Scripts/jsMDAServiceList.js"></script>
}

