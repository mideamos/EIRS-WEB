@model IList<EIRS.BOL.usp_GetAssessmentRuleList_Result>

@{
    ViewBag.Title = "Assessment Rule List";
}

<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-lg fa-fw fa-life-saver"></i>
                Assessment Rule
            </h1>
        </div>
        <div class="col-xs-12 col-sm-5 text-right">
            <a href="@Url.Action("Add","AssessmentRule")" class="btn btn-default">
                Add Assessment Rule
            </a>
        </div>
    </div>
    <section id="widget-grid">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-green" data- id="dvAssessmentRuleList">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Assessment Rule List </h2>
                        <div class="widget-toolbar">
                            <a href="@Url.Action("Add","AssessmentRule")" class="btn btn-primary">Add Assessment Rule </a>
                        </div>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                            <input class="form-control" type="text">
                        </div>
                        <div class="widget-body no-padding">
                            <table id="tbAssessmentRule" class="table table-striped table-bordered" width="100%">
                                <thead>
                                    <tr>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Assessment Rule Code" id="txtAssessmentRuleCode"/>
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Profile" id="txtProfile"/>
                                        </th>                                        
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Assessment Rule Name" id="txtAssessmentRuleName"/>
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Rule Run" id="txtRuleRunName"/>
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Frequency" id="txtPaymentFrequencyName"/>
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Assessment Items" id="txtAssessmentItems"/>
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Assessment Amount" id="txtAssessmentAmount"/>
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Tax Year" id="txtTaxYear"/>
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Settlement Method" id="txtSettlementMethod"/>
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Payment Options" id="txtPaymentOption"/>
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Status" id="txtStatus"/>
                                        </th>
                                        <th></th>
                                    </tr>
                                    <tr>
                                        <th data-class="expand">Assessment Rule Code</th>
                                        <th>Profile</th>
                                        <th>Assessment Rule Name</th>
                                        <th>Rule Run</th>
                                        <th>Frequency</th>
                                        <th>Assessment Items</th>
                                        <th>Assessment Amount</th>
                                        <th>Tax Year</th>
                                        <th>Settlement Method</th>
                                        <th>Payment Options</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

@section Footer {
    <script Function="text/javascript" src="~/Scripts/jsAssessmentRuleList.js"></script>
}

