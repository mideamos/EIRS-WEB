@using EIRS.Common;
@model EIRS.Web.Models.ReallocateTaxPayerToTaxOfficerViewModel

@{
    ViewBag.Title = "Operation Manager - Reallocate Tax Payer to Tax Officer";
}

<div class="title">
    <h1>
        Operation Manager - Reallocate Tax Payer to Tax Officer
    </h1>
    <hr>
</div>

@section header {
    <link href="~/Content/Plugins/typeahead/typeahead.css" rel="stylesheet" />
}

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            Reallocate Tax Payer to Tax Officer
        </div>
    </div>
    <div class="portlet-body">
        @using (Html.BeginForm("ReallocateTaxPayerToTaxOfficer", "OperationManager", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            if (ViewBag.Message != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Message
                </div>
            }

            <div class="row">
                <div class="col-sm-7">
                    <div class="form-group">
                        @Html.LabelFor(m => m.TaxPayerTypeID, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.DropDownListFor(m => m.TaxPayerTypeID, (SelectList)ViewBag.TaxPayerTypeList, "Select Tax Payer Type", new { @class = "form-control bs-select", @tabindex = "1", @id = "cboTaxPayerType" })
                            @Html.ValidationMessageFor(m => m.TaxPayerTypeID, "", new { @class = "help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.TaxOfficeID, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.DropDownListFor(m => m.TaxOfficeID, (SelectList)ViewBag.TaxOfficeList, "Select Tax Office", new { @class = "form-control bs-select", @tabindex = "1", @id = "cboTaxOffice" })
                            @Html.ValidationMessageFor(m => m.TaxOfficeID, "", new { @class = "help-block" })
                        </div>

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.TaxPayerID, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.HiddenFor(model => model.TaxPayerID, new { @id = "hdnTaxPayerID" })
                            @Html.TextBoxFor(model => model.TaxPayerName, "", new { @class = "form-control", @id = "txtTaxPayer", @autocomplete = "off", @placeholder = "Enter Tax Payer Name" })
                            @Html.ValidationMessageFor(model => model.TaxPayerID, "", htmlAttributes: new { @class = "help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.TaxOfficerID, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.DropDownListFor(m => m.TaxOfficerID, Enumerable.Empty<SelectListItem>(), "Select Tax Officer", new { @class = "form-control bs-select", @tabindex = "4" })
                            @Html.ValidationMessageFor(m => m.TaxOfficerID, "", new { @class = "help-block" })
                        </div>
                    </div>
                    <div class="form-group text-right row">
                        <div class="col-sm-6"></div>
                        <div class="col-sm-6">
                            <button class="btn btn-theme btn-block" id="btnSearch" type="submit" tabindex="4"> Replace </button>
                        </div>
                    </div>

                    <div class="col-sm-5">

                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Footer {
    <script src="~/Content/Plugins/typeahead/handlebars.min.js"></script>
    <script src="~/Content/Plugins/typeahead/typeahead.bundle.min.js"></script>
    <script src="~/Scripts/jsReallocateTaxPayerToTaxOfficer.js" type="text/javascript"></script>
}





