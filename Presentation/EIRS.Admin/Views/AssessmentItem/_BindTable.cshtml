@model IList<EIRS.BOL.usp_GetAssessmentItemList_Result>
@using EIRS.Common

@if (Model != null && Model.Count > 0)
{
    foreach (var item in Model)
    {
        <tr>
            <td>@item.AssessmentItemReferenceNo</td>
            <td>@item.AssetTypeName</td>
            <td>@item.AssessmentGroupName</td>
            <td>@item.AssessmentSubGroupName</td>
            <td>@item.RevenueStreamName</td>
            <td>@item.RevenueSubStreamName</td>
            <td>@item.AssessmentItemCategoryName</td>
            <td>@item.AssessmentItemSubCategoryName</td>
            <td>@item.AgencyName</td>
            <td>@item.AssessmentItemName</td>
            <td>@item.ComputationName</td>
            <td>@item.TaxBaseAmount.GetValueOrDefault().ToString("N2")</td>
            <td>@item.Percentage.GetValueOrDefault().ToString("N2")</td>
            <td>@item.TaxAmount.GetValueOrDefault().ToString("N2")</td>
            <td>@item.ActiveText</td>
            <td>
                <div class="btn-group">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                        Actions
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a href="@Url.Action("Details","AssessmentItem", new { id = item.AssessmentItemID, name=item.AssessmentItemName.ToSeoUrl()})">
                                View Details
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Edit", "AssessmentItem", new { id = item.AssessmentItemID, name=item.AssessmentItemName.ToSeoUrl() })">
                                Edit Details
                            </a>
                        </li>
                        <li>
                            <a onclick="javascript:jsfn_ChangeStatus(@item.AssessmentItemID)">
                                Mark @(item.Active.GetValueOrDefault() ? "Inactive" : "Active")
                            </a>
                        </li>
                    </ul>
                </div>
            </td>
        </tr>
    }
}
