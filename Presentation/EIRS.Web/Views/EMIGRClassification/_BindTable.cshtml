@model IList<EIRS.BOL.usp_EM_GetIGRClassificationList_Result>
@using EIRS.Common

@if (Model != null && Model.Count > 0)
{
    foreach (var item in Model)
    {
    <tr>
        <td>@item.CategoryName</td>
        <td>@item.RevenueHeadName</td>
        <td>@item.TaxMonthName</td>
        <td>@CommUtil.GetFormatedCurrency(item.Amount)</td>
        <td>@item.ActiveText</td>
        <td>
            <div class="btn-group">
                <button type="button" class="btn btn-theme btn-xs md-skip dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Action <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li>
                        <a href="@Url.Action("Details","EMIGRClassification", new { id = item.IGRClassificationID})">
                            View Details
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Edit", "EMIGRClassification", new { id = item.IGRClassificationID })">
                            Edit Details
                        </a>
                    </li>
                    <li>
                        <a onclick="javascript:jsfn_ChangeStatus(@item.IGRClassificationID)">
                            Mark @(item.Active.GetValueOrDefault() ? "Inactive" : "Active")
                        </a>
                    </li>
                </ul>
            </div>
        </td>
    </tr>
    }
}
