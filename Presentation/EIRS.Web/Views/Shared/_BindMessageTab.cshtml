@model IList<usp_GetTaxPayerMessageList_Result>


<div class="mt-comments">
    <div class="mt-comment-list">
        @foreach (var item in Model)
        {
            <div class="mt-comment">
                <div class="mt-comment-img">
                    <div class="profile-icon">@item.SenderName.Substring(0, 1)</div>
                </div>
                <div class="mt-comment-body">
                    <div class="mt-comment-info">
                        <span class="mt-comment-author">@item.SenderName</span>
                        <span class="mt-comment-date">@item.MessageDate.Value.ToString("dd MMM, hh:mm tt")</span>
                    </div>
                    <div class="mt-comment-text"> @Html.Nl2Br(item.Message) </div>
                    @{ Html.RenderAction("GetMessageAttachment", new { tpmid = item.TPMID });}
                </div>
            </div>
        }
    </div>

    <div class="inbox-footer">
        <div id="dvSMessage"></div>
        <div class="mt-comment">
            <div class="mt-comment-img">
                <div class="profile-icon">@SessionManager.ContactName?.Substring(0, 1)</div>
            </div>
            <div class="mt-comment-body">
                <textarea class="form-control" id="txtMessage"></textarea>

                <div class="row">
                    <div class="col-md-6">
                        <h5>Upload Documents</h5>
                    </div>
                    <div class="col-md-6">
                        <div id="tab_images_uploader_container" class="text-align-reverse">
                            <a id="tab_images_uploader_pickfiles" href="javascript:;" class="btn btn-secondary">
                                <i class="fa fa-plus"></i> Select Files
                            </a>
                            <a id="tab_images_uploader_uploadfiles" href="javascript:;" class="btn btn-primary hidden">
                                <i class="fa fa-share"></i> Upload Files
                            </a>
                        </div>
                    </div>
                </div>
                <hr />

                <div id="dvUDMessage"></div>
                <div class="form-group row">
                    <div class="col-md-12" id="dvAttachmentDocument">

                    </div>
                </div>


                <div class="text-right margin-top-10">
                    <button class="btn btn-theme" onclick="jsfn_SendMessage();"> SEND </button>
                </div>
            </div>
        </div>
    </div>

</div>

