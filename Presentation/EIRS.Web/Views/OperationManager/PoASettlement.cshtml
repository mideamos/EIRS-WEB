@{
    ViewBag.Title = "PoAOperationList";
}

<div class="title">
    <h1>
        Unsettled Bills with PoA Balance
    </h1>
    <hr>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption"> Unsettled Bill List</div>
        <div class="actions">

        </div>
    </div>
    <div class="portlet-body">
        <table id="tbPOASettlement" class="dt-responsive table table-bordered v-middle" width="100%">
            <thead class="red-th">
                <tr>
                    <th>Bill Date</th>
                    <th>Bill Ref</th>
                    <th class="desktop">Tax Payer</th>
                    <th>Amount</th>
                    <th class="desktop">Status</th>
                    <th class="action-th all">Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>


@section Footer {
    <script type="text/javascript" src="~/Scripts/jsPoASettlementList.js?v=@EIRS.Common.GlobalDefaultValues.VersionNumber"></script>
}
