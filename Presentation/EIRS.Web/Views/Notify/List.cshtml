
@{
    ViewBag.Title = "Notification List";
}


<div class="title">
    <h1>
        Notification
    </h1>
    <hr>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">Notification List</div>
        <div class="actions">
            @*<div class="btn-group">
                <a href="/Notify/NotificationCapture" class="btn btn-danger">
                    Add New
                </a>
                <ul class="dropdown-menu">
                    <li>
                        <a href="NotificationSearch.html">New Notification</a>
                    </li>
                </ul>
            </div>*@
        </div>
    </div>
    <div class="portlet-body">
        <table class="table table-bordered v-middle" id="tblNotifications">
            <thead class="red-th">
                <tr>
                    <th>Ref</th>
                    <th>Date</th>
                    <th>Method</th>
                    <th>Type</th>
                    <th>RIN</th>
                    <th class="action-th">Action</th>
                </tr>
            </thead>
        </table>

    </div>
</div>


<div class="modal fade" id="dvNotificationModal" tabindex="-1" role="dialog" aria-labelledby="dvNotificationModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h4 class="modal-title" id="dvNotificationModalLabel">Notification Details</h4>
            </div>
            <div class="modal-body" id="dvNotificationContent">

            </div>
        </div>
    </div>
</div>

@section Footer {
    <script type="text/javascript" src="~/Scripts/jsNotificationList.js?v=@EIRS.Common.GlobalDefaultValues.VersionNumber"></script>
}

