
@using EIRS.Common;
@{
    ViewBag.Title = "Operation Manager - Manage Assessments by Revenue Stream";
}


<div class="title">
    <h1>
        Operation Manager - Manage Assessments by Revenue Stream
    </h1>
    <hr>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            Search Filters
        </div>
    </div>
    <div class="portlet-body">
        <form id="frmBillByRevenueStream" class="form-horizontal">
            <div class="row">
                <div class="col-sm-7">
                    <div class="form-group">
                        <label class="col-md-4 control-label">Year:</label>
                        <div class="col-md-8">
                            @Html.DropDownList("Year", (SelectList)ViewBag.YearList, "Select Year", new { @tabindex="1", @class = "form-control bs-select", @id = "cboYear" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">From Date:</label>
                        <div class="col-md-8">
                            @Html.TextBox("txtFromDate", "", new { @class = "form-control", @id = "txtFromDate", @autocomplete = "off", tabindex = "2", @placeholder = "Enter From Date" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">To Date:</label>
                        <div class="col-md-8">
                            @Html.TextBox("txtToDate", "", new { @class = "form-control", @id = "txtToDate", @autocomplete = "off", tabindex = "3", @placeholder = "Enter To Date" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Bill Type:</label>
                        <div class="col-md-8">
                            @Html.DropDownList("cboBillType", (IList<SelectListItem>)ViewBag.BillTypeList, new { @id = "cboBillType", @class = "form-control bs-select", @tabindex = "4" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Bill Status:</label>
                        <div class="col-md-8">
                            @Html.DropDownList("cboBillStatus", (IList<SelectListItem>)ViewBag.BillStatusList, new { @id = "cboBillStatus", @class = "form-control bs-select", @tabindex = "5" })
                        </div>
                    </div>
                    <div class="form-group text-right row">
                        <div class="col-sm-6"></div>
                        <div class="col-sm-6">
                            <button class="btn btn-theme btn-block" id="btnSearch" type="button" tabindex="4"> Search </button>
                        </div>
                    </div>

                    <div class="col-sm-5">

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="portlet light" id="dvSearchData">
    <div class="portlet-title">
        <div class="caption">Assessments by Revenue Stream</div>
        <div class="form-actions text-right">
            <button type="button" id="btnExportToExcel" class="btn btn-theme">Export To Excel</button>
        </div>
    </div>
    <div class="portlet-body">
        <table class="dt-responsive table table-bordered v-middle" width="100%" id="tblBillByRevenueStream">
            <thead class="red-th">
                <tr>
                    <th>Revenue Stream</th>
                    <th>Amount</th>
                    <th>Count Of Transaction</th>
                    <th class="action-th all">Action</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Total</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>



@section Footer {
    <script type="text/javascript" src="~/Scripts/jsBillByRevenueStreamList.js?v=@EIRS.Common.GlobalDefaultValues.VersionNumber"></script>
}



