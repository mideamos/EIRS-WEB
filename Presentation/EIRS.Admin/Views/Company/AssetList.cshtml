@model IList<EIRS.BOL.usp_GetTaxPayerAssetList_Result>

@{
    ViewBag.Title = "Asset List";
}

<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-lg fa-fw fa-th-list"></i>
                Asset Information for @ViewBag.TaxPayerName
            </h1>
        </div>
        <div class="col-xs-12 col-sm-5 text-right">
            <a href="@Url.Action("List", "Company")" class="btn btn-default margin-right-5">
                Back
            </a>
            <a href="@Url.Action("AddAsset", "Company", new { id = ViewBag.TaxPayerID, name = ViewBag.TaxPayerRIN })" class="btn btn-primary">
                Add Asset Link
            </a>
        </div>
    </div>
    <section id="widget-grid">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-green" data- id="dvTaxPayerAssetList">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Asset Information </h2>
                        <div class="widget-toolbar">
                            <a href="@Url.Action("AddAsset", "Company", new { id = ViewBag.TaxPayerID, name = ViewBag.TaxPayerRIN })" class="btn btn-primary">Add Asset Link </a>
                        </div>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                            <input class="form-control" type="text">
                        </div>
                        <div class="widget-body no-padding">
                            <table id="tbTaxPayerAsset" class="table table-striped table-bordered" width="100%">
                                <thead>
                                    <tr>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Asset Type" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Tax Payer Role" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Asset LGA" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Asset RIN" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Status" />
                                        </th>
                                        <th style="width:25%"></th>
                                    </tr>
                                    <tr>
                                        <th data-class="expand">Asset Type</th>
                                        <th>Tax Payer Role</th>
                                        <th>Asset LGA</th>
                                        <th>Asset RIN</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody id="tbody">
                                    @{Html.RenderPartial("_BindAssetTable", Model);}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@{ 
    Html.RenderPartial("_BuildingDetailPopup");
    Html.RenderPartial("_VehicleDetailPopup");
    Html.RenderPartial("_BusinessDetailPopup");
    Html.RenderPartial("_LandDetailPopup");
}

@section Footer {
    <script type="text/javascript" src="~/Scripts/jsCompanyAssetList.js"></script>
}

