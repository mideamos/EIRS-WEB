
@{
    ViewBag.Title = "Executive Dashboard";
}

@section header {
    <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
    <link href="~/Content/Plugins/bootstrap-daterangepicker/daterangepicker.min.css" rel="stylesheet" type="text/css" />
}

<div class="title">
    <h1>
        Dashboard
    </h1>
    <hr>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    Chart : Assessment - Tax Office - Assessed
                </div>
            </div>
            <div class="portlet-body">
                <div class="row less-space">
                    <div class="col-sm-2">
                        @Html.DropDownList("cboATATaxOffice", (SelectList)ViewBag.TaxOfficeList, new { @id = "cboATATaxOffice", @class = "form-control bs-select", @multiple = "multiple", @data_selected_text_format = "count" })
                    </div>
                    <div class="col-md-4">
                        <div id="dvATAReportRange" class="btn default">
                            <i class="fa fa-calendar"></i> &nbsp;
                            <span> </span>
                            <b class="fa fa-angle-down"></b>
                        </div>
                    </div>
                    @*<div class="col-sm-2">
                            <div id="reportrange" class="btn default">
                                <i class="fa fa-calendar"></i> &nbsp;
                                <span>February 1, 2021 - February 28, 2021</span>
                                <b class="fa fa-angle-down"></b>
                            </div>

                            <select id="cboATAPeriod" name="cboATAPeriod" class="form-control bs-select">
                                <option value="1">Yearly</option>
                                <option value="3">Monthly</option>
                                <option value="4">Weekly</option>
                                <option value="5">Daily</option>
                                <option value="6">Custom</option>
                            </select>
                        </div>
                        <div class="col-md-4" id="dvCustomRange">
                            <div class="input-group date-picker input-daterange" data-date-format="yyyy/mm/dd">
                                <input type="text" class="form-control" name="from">
                                <span class="input-group-addon"> to </span>
                                <input type="text" class="form-control" name="to">
                            </div>
                        </div>*@
                    <div class="col-sm-2">
                        <input type="checkbox" id="chkTAC" data-toggle="toggle" data-on="Amount" data-off="Count" checked data-size="small" data-onstyle="theme">
                    </div>
                </div>
                <hr />
                <div id="chrtAssessmentTaxOfficeAssessed" style="height: 300px; width: 100%;"></div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    Table : Assessment - Tax Office - Assessed
                </div>
                <div class="actions">
                    <select id="cboATASeries" name="cboATASeries" class="form-control bs-select" multiple data-selected-text-format="count">
                    </select>
                    <a id="btnATADowload" class="btn btn-theme">Download</a>
                </div>
            </div>
            <div class="portlet-body" id="dvAssessmentTaxOfficeAssessedTable">

            </div>
        </div>
    </div>
</div>

@section Footer {
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
    <script type="text/javascript" src="~/Content/Plugins/apexcharts/apexcharts.min.js"></script>
    <script src="~/Content/Plugins/bootstrap-daterangepicker/daterangepicker.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Scripts/jsExecutiveDashboard.js?v=@GlobalDefaultValues.VersionNumber"></script>
}
