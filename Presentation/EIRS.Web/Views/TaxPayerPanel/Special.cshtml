@model IList<EIRS.BOL.usp_GetSpecialList_Result>
@using EIRS.Common
@{
    Layout = "~/Views/Shared/_TaxPayerLayout.cshtml";
    ViewBag.Title = "Special Tax Payer";
}

<div class="title">
    <h1>Special Tax Payer</h1>
    <hr />
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            List of Special Tax Payers
        </div>
        <div class="actions">

        </div>
    </div>
    <div class="portlet-body">
        <table class="dt-responsive table table-bordered v-middle" width="100%" id="tblSpecial">
            <thead class="red-th">
                <tr>
                    <th>RIN</th>
                    <th>Special Name</th>
                    <th>TIN</th>
                    <th class="desktop">Contact Name</th>
                    <th class="action-th all">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.SpecialRIN</td>
                        <td>@item.SpecialTaxPayerName</td>
                        <td>@item.TIN</td>
                        <td>@item.ContactName</td>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-theme dropdown-toggle md-skip btn-xs" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Action<span class="caret"></span>
                                </button><ul class="dropdown-menu">
                                    <li>
                                        <a onclick="javascript:jsfn_TaxPayerSpecialInformation(@item.SpecialID)">
                                            Quick View
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("SpecialDetails","TaxPayerPanel")">
                                            Tax Payer Details
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @{Html.RenderPartial("_SpecialDetailPopup"); }

    @section Footer {
        <script type="text/javascript" src="~/Scripts/jsTaxPayerSpecialList.js"></script>
    }
