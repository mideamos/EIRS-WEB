@using EIRS.Common;
@model EIRS.Web.Models.ReplaceTaxOfficerViewModel

@{
    ViewBag.Title = "Operation Manager - Replace Tax Officer";
}

<div class="title">
    <h1>
        Operation Manager - Replace Tax Officer
    </h1>
    <hr>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            Replace Tax Officer
        </div>
    </div>
    <div class="portlet-body">
        @using (Html.BeginForm("ReplaceTaxOfficer", "OperationManager", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            if (ViewBag.Message != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Message
                </div>
            }

            <div class="row">
                <div class="col-sm-7">
                    <div class="form-group">
                        @Html.LabelFor(m => m.TaxOfficeID, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.DropDownListFor(m => m.TaxOfficeID, (SelectList)ViewBag.TaxOfficeList, "Select Tax Office", new { @class = "form-control bs-select", @tabindex = "1", @id = "cboTaxOffice" })
                            @Html.ValidationMessageFor(m => m.TaxOfficeID, "", new { @class = "help-block" })
                        </div>

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.TaxOfficerID, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.DropDownListFor(m => m.TaxOfficerID, Enumerable.Empty<SelectListItem>(), "Select Tax Officer", new { @class = "form-control bs-select", @tabindex = "2" })
                            @Html.ValidationMessageFor(m => m.TaxOfficerID, "", new { @class = "help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ReplacementID, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.DropDownListFor(m => m.ReplacementID, Enumerable.Empty<SelectListItem>(), "Select Replacement", new { @class = "form-control bs-select", @tabindex = "3" })
                            @Html.ValidationMessageFor(m => m.ReplacementID, "", new { @class = "help-block" })
                        </div>
                    </div>
                    <div class="form-group text-right row">
                        <div class="col-sm-6"></div>
                        <div class="col-sm-6">
                            <button class="btn btn-theme btn-block" id="btnSearch" type="submit" tabindex="4"> Replace </button>
                        </div>
                    </div>

                    <div class="col-sm-5">

                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Footer {
    <script src="~/Scripts/jsReplaceTaxOfficer.js" type="text/javascript"></script>
}





