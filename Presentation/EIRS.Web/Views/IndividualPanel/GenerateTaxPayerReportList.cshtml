@model IList<EIRS.BOL.usp_RPT_GetTaxPayerReport_Result>
@using EIRS.Common
<div class="portlet light ">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-list"></i> Tax Payer Report
        </div>
    </div>
    <div class="portlet-body">
        <table class="dt-responsive table table-bordered v-middle" width="100%" id="tblGTPRL">
            <thead>
                <tr>
                    <th> Assessment Rules </th>
                    <th> Profiled </th>
                    <th> Assessed </th>
                    <th> Notified </th>
                    <th> Settled </th>
                    <th> Unsettled </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.AssessmentRuleName</td>
                        <td>@item.ProfiledAmount.GetValueOrDefault().ToString("N2")</td>
                        <td>@item.AssessedAmount.GetValueOrDefault().ToString("N2")</td>
                        <td>@item.NotifiedAmount.GetValueOrDefault().ToString("N2")</td>
                        <td>@item.SettledAmount.GetValueOrDefault().ToString("N2")</td>
                        <td>@item.UnSettledAmount.GetValueOrDefault().ToString("N2")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
