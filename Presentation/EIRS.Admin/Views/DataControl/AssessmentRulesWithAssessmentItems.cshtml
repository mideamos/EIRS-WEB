@model IList<EIRS.Repository.DataControlRepository.AssessmentAndItem>
@{
    string year = ViewBag.PresentYear;
    ViewBag.Title = "AssessmentRulesWithAssessmentItems";
}
<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-lg fa-fw fa-th-list"></i>
                Assessment Rules With Assessment Items For The Year @year
            </h1>
        </div>
        <div class="col-xs-12 col-sm-5 text-right">
        </div>
    </div>
    <section id="widget-grid">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-green" data- id="dvAIWARList">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Assessment Items Without Assessment Rules</h2>
                        <div class="widget-toolbar">
                        </div>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                            <input class="form-control" type="text">
                        </div>
                        <div class="widget-body no-padding">
                            <table id="tbAssessmentItem" class="table table-striped table-bordered" width="100%">
                                <thead>
                                    <tr>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Assessment Item Reference No" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Asset Type " />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Assessment Group" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Assessment Sub Group" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Revenue Stream" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Revenue Sub Stream " />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Assessment Item Category" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Assessment Item Sub Category " />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Revenue Agency " />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Assessment Item Name " />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Computation " />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Tax Base Amount " />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Percentage " />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Tax Amount " />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Filter Status" />
                                        </th>
                                    </tr>
                                    <tr>
                                        <th data-class="expand">Assessment Item Reference No</th>
                                        <th>Asset Type</th>
                                        <th>Assessment Group</th>
                                        <th>Assessment Sub Group</th>
                                        <th>Revenue Stream</th>
                                        <th>Revenue Sub Stream</th>
                                        <th>Assessment Item Category</th>
                                        <th>Assessment Item Sub Category</th>
                                        <th>Revenue Agency</th>
                                        <th>Assessment Item Name</th>
                                        <th>Computation</th>
                                        <th>Tax Base Amount</th>
                                        @*<th>Percentage</th>
                                        <th>Tax Amount</th>*@
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody id="tbody">
                                    @if (Model != null && Model.Count > 0)
                                    {

                                        foreach (var item in Model)
                                        {
                                            string activeText = "False";
                                            if (item.Active == true)
                                            {
                                                activeText = "True";
                                            }
                                            <tr>
                                                <td>@item.ARAIID</td>
                                                <td>@item.AssessmentRuleCode</td>
                                                <td>@item.AssessmentItemID</td>
                                                <td>@item.AssessmentRuleID</td>
                                                <td>@item.AssessmentRuleName</td>
                                                <td>@item.ProfileId</td>
                                                <td>@item.RuleRunId</td>
                                                <td>@item.PaymentFrequencyID</td>
                                                <td>@item.CreatedBy</td>
                                                <td>@item.AssessmentAmount</td>
                                                <td>@item.ProfileId</td>
                                                <td>@item.AssessmentAmount.ToString("N2")</td>
                                                @*<td>@item.Percentage.GetValueOrDefault().ToString("N2")</td>
                                                <td>@item.TaxAmount.GetValueOrDefault().ToString("N2")</td>*@
                                                <td>activeText</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Footer {
    <script type="text/javascript" src="~/Scripts/jsAssessmentItemList.js"></script>
}