@model IList<EIRS.BOL.usp_GetLandList_Result>
@using EIRS.Common

<table class="dt-responsive table table-bordered v-middle" width="100%" id="tblLandList">
    <thead class="red-th">
        <tr>
            <th>RIN</th>
            <th>Plot Number</th>
            <th>Occupier</th>
            <th class="desktop">Land Function</th>
            <th class="action-th all">Action</th>
        </tr>
    </thead>
    @if (Model != null && Model.Count > 0)
    {
        <tbody>
            @foreach (var vLand in Model)
            {
            <tr>
                <td>@vLand.LandRIN</td>
                <td>@vLand.PlotNumber</td>
                <td>@vLand.LandOccupier</td>
                <td>@vLand.LandFunctionName</td>
                <td>
                    <div class="btn-group">
                        <button type="button" class="btn btn-theme dropdown-toggle md-skip btn-xs" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Action <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a onclick="javascript:jsfn_LandDetails(@vLand.LandID)">
                                    Quick View
                                </a>
                            </li>
                            <li>
                                <a onclick="javascript:jsfn_LinkLand(@vLand.LandID)">
                                    Select
                                </a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    }
</table>

