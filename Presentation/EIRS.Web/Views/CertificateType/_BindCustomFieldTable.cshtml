@model IList<CertificateTypeFieldViewModel>
@using EIRS.Common

<table class="dt-responsive table table-bordered v-middle" width="100%" id="tblCustomField">
    <thead class="purple-th">
        <tr>
            <th>Field Name</th>
            <th>Field Type</th>
            <th>Attribute</th>
            <th class="action-th all"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.FieldName</td>
                    <td>@item.FieldTypeName</td>

                    @if (item.IsRequired)
                    {
                        <td>Mandatory</td>
                    }
                    else
                    {
                        <td>Optional</td>
                    }
                    <td>
                        <div class="btn-group">
                            <button type="button" class="btn btn-theme btn-xs md-skip dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Action <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a onclick="jsfn_RemoveCustomField(@item.RowID)">Remove</a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>



