@model EIRS.Models.EMBankViewModel

@{
    ViewBag.Title = "Edit Bank";
}

<div class="title">
    <h1>
        Manage Banks
    </h1>
    <hr>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            Update Bank
        </div>
        <div class="actions">
            <a href="@Url.Action("List","EMBank")" class="btn btn-redtheme"> Cancel </a>
        </div>
    </div>
    <div class="portlet-body">
        @using (Html.BeginForm("Edit", "EMBank", FormMethod.Post, htmlAttributes: new { @id = "frmAddBank" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.BankID, htmlAttributes: new { @value = Model.BankID })

            if (ViewBag.Message != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Message
                </div>
            }
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.BankName, htmlAttributes: new { @class = "control-label required-star" })
                        @Html.TextBoxFor(model => model.BankName, htmlAttributes: new { @class = "form-control", @tabindex = "1", @placeholder = "Enter Bank Name" })
                        @Html.ValidationMessageFor(model => model.BankName, "", htmlAttributes: new { @class = "help-block" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.BankAccountNumber, htmlAttributes: new { @class = "control-label required-star" })
                        @Html.TextBoxFor(model => model.BankAccountNumber, htmlAttributes: new { @class = "form-control", @tabindex = "2", @placeholder = "Enter Bank Account Number" })
                        @Html.ValidationMessageFor(model => model.BankAccountNumber, "", htmlAttributes: new { @class = "help-block" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.BankDescription, htmlAttributes: new { @class = "control-label required-star" })
                        @Html.TextAreaFor(model => model.BankDescription, htmlAttributes: new { @class = "form-control", @tabindex = "3", @placeholder = "Enter Bank Description" })
                        @Html.ValidationMessageFor(model => model.BankDescription, "", htmlAttributes: new { @class = "help-block" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Active, htmlAttributes: new { @class = "control-label" })
                        <br />
                        @Html.CheckBoxFor(model => model.Active, new Dictionary<string, object> { { "data-checkbox", "icheckbox_square-green" }, { "class", "icheck" }, { "tabindex", "4" } })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="text-right col-sm-12">
                    <div class="form-group">
                        <input type="submit" class="btn-theme btn" value="Save" tabindex="5" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
