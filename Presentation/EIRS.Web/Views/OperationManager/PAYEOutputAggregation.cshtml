@{
    ViewBag.Title = "Operation Manager - PAYE Output Aggregation";
}

<div class="title">
    <h1>
        Operation Manager - PAYE Output Aggregation
    </h1>
    <hr>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            Search Filters
        </div>
    </div>
    <div class="portlet-body">
        <form id="frmPAYEOutputAggregation" class="form-horizontal">
            <div class="row">
                <div class="col-sm-7">
                    <div class="form-group">
                        <label class="col-md-4 control-label">Year:</label>
                        <div class="col-md-8">
                            @Html.DropDownList("Year", (SelectList)ViewBag.YearList, "Select Year", new { @class = "form-control bs-select", @id = "cboYear" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Tax Office:</label>
                        <div class="col-md-8">
                            @Html.DropDownList("cboTaxOffice", (SelectList)ViewBag.TaxOfficeList, "All Tax Office", new { @id = "cboTaxOffice", @class = "form-control bs-select", @tabindex = "4" })
                        </div>
                    </div>
                    <div class="form-group text-right row">
                        <div class="col-sm-6"></div>
                        <div class="col-sm-6">
                            <button class="btn btn-theme btn-block" id="btnSearch" type="button" tabindex="4"> Search </button>
                        </div>
                    </div>

                    <div class="col-sm-5">

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="portlet light" id="dvSearchData">
    <div class="portlet-title">
        <div class="caption">PAYE Output Aggregation</div>
        <div class="form-actions text-right">
            <button type="button" id="btnExportToExcel" class="btn btn-theme">Export To Excel</button>
        </div>
    </div>
    <div class="portlet-body" id="dvData">
        <table class="dt-responsive table table-bordered v-middle" width="100%" id="tblPAYEOutputAggregation">
            <thead class="red-th">
                <tr>
                    <th>Employer RIN</th>
                    <th>Employer Name </th>
                    <th>Employee Count</th>
                    <th>Amount Collected </th>
                    <th class="action-th all">Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Footer {
    <script type="text/javascript" src="~/Scripts/jsPAYEOutputAggregationSummary.js?v=@EIRS.Common.GlobalDefaultValues.VersionNumber"></script>
}




