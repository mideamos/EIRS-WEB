@model IList<AssessmentRule_AssessmentItem>
@{
    ViewBag.Title = "Assessment Rule Items Details";
}

<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-lg fa-fw fa-life-saver"></i>
                Assessment Rule - Items
            </h1>
        </div>
        <div class="col-xs-12 col-sm-5 text-right">
        </div>
    </div>
    <section id="widget-grid">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
                <div class="jarviswidget jarviswidget-color-green" id="dvAssessmentRuleItemDetails">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-eye"></i> </span>
                        <h2>Assessment Rule</h2>
                    </header>
                    <div class="content">
                        <div class="jarviswidget-editbox">
                            <input class="form-control" type="text">
                        </div>
                        <div class="widget-body no-padding">
                            <div class="smart-form">
                                <header>
                                    Assessment Rule Items
                                </header>

                                <fieldset>
                                    <table class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Assessment Item </th>
                                                <th>Item Name</th>
                                                <th>Tax Amount</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.Count > 0)
                                            {
                                                foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>@item.AssessmentItemReferenceNo</td>
                                                        <td>@item.AssessmentItemName</td>
                                                        <td>@item.TaxAmount.ToString("N2")</td>
                                                        <td>
                                                            <div class="btn-group">
                                                                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                                                                    &nbsp;&nbsp; Actions
                                                                    <span class="caret"></span>&nbsp;&nbsp;
                                                                </button>
                                                                <ul class="dropdown-menu" role="menu">
                                                                    <li>
                                                                        <a onclick="javascript:jsfn_ShowAssessmentItemDetails(@item.AssessmentItemID)">
                                                                            View
                                                                        </a>
                                                                    </li>
                                                                </ul>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }

                                                <tr>
                                                    <td colspan="2">Total</td>
                                                    <td>@Model.Sum(t => t.TaxAmount).ToString("N2")</td>
                                                    <td></td>
                                                </tr>
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td colspan="4" align="center">No Records Found.</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </fieldset>
                                <footer>
                                    <a class="btn btn-default" href="@Url.Action("List","AssessmentRule")">
                                        Back
                                    </a>
                                </footer>
                            </div>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

@{ Html.RenderPartial("_ProfileDetailPopup"); Html.RenderPartial("_AssessmentItemDetailPopup"); }
@section Footer {
    <script Function="text/javascript" src="~/Scripts/jsAssessmentRuleView.js"></script>
}