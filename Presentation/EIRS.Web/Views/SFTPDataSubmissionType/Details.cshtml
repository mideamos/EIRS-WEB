@model EIRS.BOL.usp_SFTP_GetDataSubmissionTypeList_Result

@{
    ViewBag.Title = "Data Submission Type Details";
}

<div class="title">
    <h1>
        Data Submission Type
    </h1>
    <hr>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            Data Submission Type Details
        </div>
        <div class="actions">
            <a href="@Url.Action("List","SFTPDataSubmissionType")" class="btn btn-redtheme"> Cancel </a>
        </div>
    </div>
    <div class="portlet-body">
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label bold">Data Submission Type Name: </label>
                    <div class="form-control-static">
                        @Model.DataSubmissionTypeName
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label bold">Template: </label>
                    <div class="form-control-static">
                        @if (!string.IsNullOrWhiteSpace(Model.TemplateFilePath))
                        {
                            <a href="/Document/@Model.TemplateFilePath" target="_blank">Download</a>
                        }
                        else
                        {
                            @:-
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label bold">Status: </label>
                    <div class="form-control-static">
                        @Model.ActiveText
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
