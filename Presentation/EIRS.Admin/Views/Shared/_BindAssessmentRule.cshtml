@model IList<Assessment_AssessmentRule>
@using EIRS.Common

@if (Model.Count > 0)
{
    foreach (var item in Model)
    {
        <tr>
            <td>@item.AssetTypeName</td>
            <td>@item.AssetRIN</td>
            <td>@item.ProfileDescription</td>
            <td>@item.AssessmentRuleName</td>
            <td>@item.AssessmentRuleAmount.ToString("N2")</td>
            <td>
                <div class="btn-group">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                        &nbsp;&nbsp; Actions
                        <span class="caret"></span>&nbsp;&nbsp;
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a onclick="javascript:jsfn_ShowAssessmentRuleDetails(@item.AssessmentRuleID)">
                                View
                            </a>
                        </li>
                        <li>
                            <a onclick="javascript:jsfn_RemoveAssessmentRule(@item.RowID)">
                                Remove
                            </a>
                        </li>
                    </ul>
                </div>
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="6" align="center">No Records Found.</td>
    </tr>
}


