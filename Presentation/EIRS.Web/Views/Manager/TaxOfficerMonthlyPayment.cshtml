@using EIRS.Common;
@{
    ViewBag.Title = "Manager - Tax Officer Monthly Payments";
}

<div class="title">
    <h1>
        Manager - Tax Officer Monthly Payments
    </h1>
    <hr>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            Search Filters
        </div>
    </div>
    <div class="portlet-body">
        <form id="frmTaxOfficerMonthlyPayments" class="form-horizontal">
            <div class="row">
                <div class="col-sm-7">
                    <div class="form-group">
                        <label class="col-md-4 control-label">Year:</label>
                        <div class="col-md-8">
                            @Html.DropDownList("Year", (SelectList)ViewBag.YearList, "All Year", new { @class = "form-control bs-select", @id = "cboYear" })
                        </div>
                    </div>
                    <div class="form-group text-right row">
                        <div class="col-sm-6"></div>
                        <div class="col-sm-6">
                            <button class="btn btn-theme btn-block" id="btnSearch" type="button" tabindex="4"> Search </button>
                        </div>
                    </div>

                    <div class="col-sm-5">

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="portlet light" id="dvSearchData">
    <div class="portlet-title">
        <div class="caption">My Monthly Payments</div>
        <div class="form-actions text-right">

        </div>
    </div>
    <div class="portlet-body" id="dvData">
        <table class="dt-responsive table table-bordered v-middle" width="100%" id="tblTaxOfficerMonthlyPayments">
            <thead class="red-th">
                <tr>
                    <th>Month</th>
                    <th>Settlements</th>
                    <th>PoA</th>
                    <th>Total Payment</th>
                </tr>
            </thead>
        </table>
    </div>
</div>



@section Footer {
    <script type="text/javascript" src="~/Scripts/jsManagerTaxOfficerMonthlyPayment.js?v=@EIRS.Common.GlobalDefaultValues.VersionNumber"></script>
}




