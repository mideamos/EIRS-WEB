@model IList<EIRS.BOL.usp_GetVehicleList_Result>
@using EIRS.Common

<table id="tbAsset" class="table table-striped table-bordered" width="100%">
    <thead>
        <tr>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Vehicle RIN" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Vehicle Reg Number" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter VIN" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Vehicle Type" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Vehicle Sub Type" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter LGA" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Vehicle Purpose" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Vehicle Function" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Vehicle Ownership" />
            </th>
            <th class="hasinput" style="width:10%">
                <input type="text" class="form-control" placeholder="Filter Status" />
            </th>
            <th style="width:10%"></th>
        </tr>
        <tr>
            <th data-class="expand">Vehicle RIN</th>
            <th>Vehicle Reg Number</th>
            <th>VIN</th>
            <th>Vehicle Type</th>
            <th>Vehicle Sub Type</th>
            <th>LGA</th>
            <th>Vehicle Purpose</th>
            <th>Vehicle Function</th>
            <th>Vehicle Ownership</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
       @if (Model != null && Model.Count > 0)
       {
           foreach (var item in Model)
           {
            <tr>
                <td>@item.VehicleRIN</td>
                <td>@item.VehicleRegNumber</td>
                <td>@item.VIN</td>
                <td>@item.VehicleTypeName</td>
                <td>@item.VehicleSubTypeName</td>
                <td>@item.LGAName</td>
                <td>@item.VehiclePurposeName</td>
                <td>@item.VehicleFunctionName</td>
                <td>@item.VehicleOwnershipName</td>
                <td>@item.ActiveText</td>
                <td>
                    <label class="checkbox">
                        @Html.CheckBox("chkAsset_" + item.VehicleID, new { @onChange = "jsfn_SelectAsset(this)", @data_assetid = item.VehicleID, @title = "Tick To Select" })
                        <i></i>
                    </label>
                </td>
            </tr>
           }
       }

    </tbody>
</table>
