@model IList<EIRS.BOL.usp_GetTaxPayerAssetList_Result>
@using EIRS.Common

@if (Model != null && Model.Count > 0)
{
    foreach (var item in Model)
    {
        <tr>
            <td>@item.AssetTypeName</td>
            <td>@item.TaxPayerRoleName</td>
            <td>@item.AssetLGA</td>
            <td>@item.AssetRIN</td>
            <td>@item.ActiveText</td>
            <td>
                <div class="btn-group">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                        Actions
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a onclick="javascript:jsfn_ShowDetails(@item.TPAID)">
                                View Details
                            </a>
                        </li>
                        <li>
                            <a onclick="javascript:jsfn_RemoveLink(@item.TPAID, @item.TaxPayerID)">
                                Remove Link
                            </a>
                        </li>
                        <li>
                            <a onclick="javascript:jsfn_ChangeStatus(@item.TPAID, @item.TaxPayerID)">
                                Mark @(item.Active.GetValueOrDefault() ? "Inactive" : "Active")
                            </a>
                        </li>
                    </ul>
                </div>
            </td>
        </tr>
    }
}

