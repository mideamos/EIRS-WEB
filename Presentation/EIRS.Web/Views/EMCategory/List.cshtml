@model IList<EIRS.BOL.usp_EM_GetCategoryList_Result>
@{
    ViewBag.Title = "ERAS Manual - Classification Category";
}

<div class="title">
    <h1>ERAS Manual - Classification Category</h1>
    <hr />
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            List of Classification Categories
        </div>
        <div class="actions">
            <a href="@Url.Action("Add","EMCategory")" class="btn btn-theme">
                Add New
            </a>
        </div>
    </div>
    <div class="portlet-body">
        <table class="dt-responsive table table-bordered v-middle" width="100%" id="tblCategory">
            <thead class="red-th">
                <tr>
                    <th>Category Name</th>
                    <th>Status</th>
                    <th class="action-th all">Action</th>
                </tr>
            </thead>
            <tbody id="tbody">
                @{Html.RenderPartial("_BindTable", Model);}
            </tbody>
        </table>
    </div>
</div>

@section Footer {
    <script type="text/javascript" src="~/Scripts/jsEMCategoryList.js?v=@EIRS.Common.GlobalDefaultValues.VersionNumber"></script>
}
