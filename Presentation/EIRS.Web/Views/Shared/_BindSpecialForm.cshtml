@model EIRS.Models.SpecialViewModel

<div class="row">
    <div class="col-sm-6">
        <div class="form-group">
            @Html.LabelFor(model => model.SpecialName, htmlAttributes: new { @class = "control-label required-star" })
            @Html.TextBoxFor(model => model.SpecialName, htmlAttributes: new { @tabindex = "2", @placeholder = "Enter Special name", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SpecialName, "", htmlAttributes: new { @class = "help-block" })
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group">
            @Html.LabelFor(model => model.TIN, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.TIN, htmlAttributes: new { @tabindex = "3", @placeholder = "Enter tax identification number from JTB if available", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TIN, "", htmlAttributes: new { @class = "help-block" })
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-6">
        <div class="form-group">
            @Html.LabelFor(model => model.TaxOfficeID, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownListFor(model => model.TaxOfficeID, (SelectList)ViewBag.TaxOfficeList, "Select Tax Office", htmlAttributes: new { @tabindex = "4", @id = "cboTaxOffice", @class = "form-control bs-select" })
            @Html.ValidationMessageFor(model => model.TaxOfficeID, "", htmlAttributes: new { @class = "help-block" })
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group">
            @Html.LabelFor(model => model.TaxPayerTypeID, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownListFor(model => model.TaxPayerTypeID, (SelectList)ViewBag.TaxPayerTypeList, "Select Tax Payer Type", htmlAttributes: new { @tabindex = "5", @class = "form-control bs-select", @id = "cboTaxPayerTypeID", @disabled = "true" })
            @Html.ValidationMessageFor(model => model.TaxPayerTypeID, "", htmlAttributes: new { @class = "help-block" })
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-6">
        <div class="form-group">
            @Html.LabelFor(model => model.ContactName, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.ContactName, htmlAttributes: new { @tabindex = "6", @placeholder = "Enter Contact Name", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ContactName, "", htmlAttributes: new { @class = "help-block" })
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group">
            @Html.LabelFor(model => model.ContactEmail, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.ContactEmail, htmlAttributes: new { @tabindex = "7", @placeholder = "Enter Contact Email", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ContactEmail, "", htmlAttributes: new { @class = "help-block" })
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-6">
        <div class="form-group">
            @Html.LabelFor(model => model.ContactNumber, htmlAttributes: new { @class = "control-label" })
            <div class="input-group">
                <span class="input-group-addon"> ( 234 - 0 - ) </span>
                @Html.TextBoxFor(model => model.ContactNumber, htmlAttributes: new { @tabindex = "8", @placeholder = "Enter Contact Number", @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(model => model.ContactNumber, "", htmlAttributes: new { @class = "help-block" })
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label required-star" })
            @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @tabindex = "9", @Rows = "3", @placeholder = "Enter Description", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Description, "", htmlAttributes: new { @class = "help-block" })
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-6">
        <div class="form-group">
            @Html.LabelFor(model => model.NotificationMethodID, htmlAttributes: new { @class = "control-label required-star" })
            @Html.DropDownListFor(model => model.NotificationMethodID, (SelectList)ViewBag.NotificationMethodList, "Select Notification Method", htmlAttributes: new { @tabindex = "10", @class = "form-control bs-select" })
            @Html.ValidationMessageFor(model => model.NotificationMethodID, "", htmlAttributes: new { @class = "help-block" })
        </div>
    </div>
</div>
