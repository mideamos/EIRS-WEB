@model EIRS.Web.Models.UserViewModel
@using EIRS.BOL
@{
    ViewBag.Title = "Screen List";
    IList<usp_GetScreenUserList_Result> lstScreen = (IList<usp_GetScreenUserList_Result>)ViewBag.ScreenList;
}

<div class="title">
    <h1>
        Manage Users : Screen List
    </h1>
    <hr>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            User Details
        </div>
        <div class="actions">
            <a href="@Url.Action("List","User")" class="btn btn-redtheme"> Cancel </a>
        </div>
    </div>
    <div class="portlet-body">
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label bold">User Type: </label>
                    <div class="form-control-static">
                        @Model.UserTypeName
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label bold">User Name: </label>
                    <div class="form-control-static">
                        @Model.UserName
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label bold">Contact Name: </label>
                    <div class="form-control-static">
                        @Model.ContactName
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label bold">Email Address: </label>
                    <div class="form-control-static">
                        @Model.Email
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label bold">Contact Number: </label>
                    <div class="form-control-static">
                        @Model.ContactNumber
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label bold">Status: </label>
                    <div class="form-control-static">
                        @Model.ActiveText
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">Associated Screens</div>
        <div class="actions">
            <a href="@Url.Action("AddScreen","User", new { id= Model.UserID, name=Model.UserName })" class="btn btn-redtheme">
                Add New
            </a>
        </div>
    </div>
    <div class="portlet-body" id="dvScreenData">
        @{ Html.RenderPartial("_ScreenTable", lstScreen); }
    </div>
</div>

@section Footer {
<script type="text/javascript" src="~/Scripts/jsUserScreenDetails.js?v=@EIRS.Common.GlobalDefaultValues.VersionNumber"></script>
}