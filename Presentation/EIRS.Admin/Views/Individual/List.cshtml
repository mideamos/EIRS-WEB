@model IList<EIRS.BOL.usp_GetIndividualList_Result>

@{
    ViewBag.Title = "Individual List";
}

<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-lg fa-fw fa-child"></i>
                Individual
            </h1>
        </div>
        <div class="col-xs-12 col-sm-5 text-right">
            <a href="@Url.Action("Add","Individual")" class="btn btn-default">
                Add Individual
            </a>
        </div>
    </div>
    <section id="widget-grid">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-green" data-id="dvIndividualList">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Individual List </h2>
                        <div class="widget-toolbar">
                            <a href="@Url.Action("Add","Individual")" class="btn btn-primary">Add Individual </a>
                        </div>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                            <input class="form-control" type="text">
                        </div>
                        <div class="widget-body no-padding">
                            <table id="tbIndividual" class="table table-striped table-bordered" width="100%">
                                <thead>
                                    <tr>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter User RIN" id="txtUserRIN"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Gender" id="txtGender"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Title" id="txtTitle"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter First Name" id="txtFirstName"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Last Name" id="txtLastName"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Middle Name" id="txtMiddleName"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Date of Birth" id="txtDateOfBirth" />
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter TIN" id="txtTIN"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Mobile Number 1" id="txtMobileNumber1"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Mobile Number 2" id="txtMobileNumber2"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Email Address 1" id="txtEmailAddress1"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Email Address 2" id="txtEmailAddress2"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Biometric Details" id="txtBiometricDetails"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Tax Office" id="txtTaxOffice"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Marital Status" id="txtMaritalStatus"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Nationality" id="txtNationality"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Tax Payer Type" id="txtTaxPayerType"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Economic Activity" id="txtEconomicActivity"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Notification Method" id="txtNotificationMethod"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Status" id="txtStatus"/>
                                        </th>
                                        <th style="width:10%"></th>
                                    </tr>
                                    <tr>
                                        <th data-class="expand">User RIN</th>
                                        <th>Gender</th>
                                        <th>Title</th>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Middle Number</th>
                                        <th>Date of Birth</th>
                                        <th>TIN</th>
                                        <th>Mobile Number 1</th>
                                        <th>Mobile Number 2</th>
                                        <th>Email Address 1</th>
                                        <th>Email address 2</th>
                                        <th>Biometric Details</th>
                                        <th>Tax Office</th>
                                        <th>Marital Status</th>
                                        <th>Nationality</th>
                                        <th>Tax Payer Type</th>
                                        <th>Economic Activity</th>
                                        <th>Notification Method</th>
                                        <th>Tax Payer Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                              
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

<div id="dvProfileInformation" title="Profile Information">
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="control-label control-label-static">Tax Payer RIN</label>
                <div id="dvPITaxPayerRIN">

                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="control-label control-label-static">Tax Payer Name</label>
                <div id="dvPITaxPayerName">

                </div>
            </div>
        </div>
        <div class="col-sm-12" id="dvProfileList">

        </div>
    </div>
</div>

<div id="dvAssessmentRuleInformation" title="Assessment Rule Information">
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="control-label control-label-static">Tax Payer RIN</label>
                <div id="dvARITaxPayerRIN">

                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="control-label control-label-static">Tax Payer Name</label>
                <div id="dvARITaxPayerName">

                </div>
            </div>
        </div>
        <div class="col-sm-12" id="dvAssessmentRuleList">

        </div>
    </div>
</div>

@section Footer {
    <script type="text/javascript" src="~/Scripts/jsIndividualList.js"></script>
}

