@using EIRS.Common;
@{
    ViewBag.Title = "Operation Manger - Allocate Tax Payers to Tax Officers";
}

<div class="title">
    <h1>
        Operation Manger - Allocate Tax Payers to Tax Officers
    </h1>
    <hr>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            Search Filters
        </div>
    </div>
    <div class="portlet-body">
        <form id="frmAllocatedTaxPayer" class="form-horizontal">
            <div class="row">
                <div class="col-sm-7">
                    <div class="form-group">
                        <label class="col-md-4 control-label">Tax Office:</label>
                        <div class="col-md-8">
                            @Html.DropDownList("TaxOffice", (SelectList)ViewBag.TaxOfficeList, "Select Tax Office", new { @class = "form-control bs-select", @id = "cboTaxOffice" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Tax Officer:</label>
                        <div class="col-md-8">
                            @Html.DropDownList("TaxOfficer", Enumerable.Empty<SelectListItem>(), "Select Tax Officer", new { @class = "form-control bs-select", @id = "cboTaxOfficer" })
                        </div>
                    </div>
                    <div class="form-group text-right row">
                        <div class="col-sm-6"></div>
                        <div class="col-sm-6">
                            <button class="btn btn-theme btn-block" id="btnSearch" type="button" tabindex="4"> Search </button>
                        </div>
                    </div>

                    <div class="col-sm-5">

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="portlet light" id="dvSearchData">
    <div class="portlet-title">
        <div class="caption">Allocated Tax Payers</div>
        <div class="form-actions text-right">
            <button type="button" class="btn btn-theme" id="btnAdd">Add</button>
        </div>
    </div>

    <div class="portlet-body" id="dvData">
        <table class="dt-responsive table table-bordered v-middle" width="100%" id="tblAllocatedTaxPayer">
            <thead class="red-th">
                <tr>
                    <th>Tax Payer RIN</th>
                    <th class="none">Tax Payer Name</th>
                    <th>Tax Payer Type </th>
                    <th>Assessment</th>
                    <th>Payment</th>
                    <th class="action-th all">Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<div class="modal fade" id="dvTaxPayerTypeModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h5 class="modal-title">Select Tax Payer Type</h5>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label required-star">Select Tax Payer Type</label>
                    @Html.DropDownList("cboTaxPayerType", (SelectList)ViewBag.TaxPayerTypeList, "Select Tax Payer Type", new { @class = "form-control bs-select", @id = "cboTaxPayerType" })
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnProceed" class="btn btn-theme">Proceed</button>

            </div>
        </div>
    </div>
</div>

@section Footer {
    <script type="text/javascript" src="~/Scripts/jsAllocatedTaxPayerList.js?v=@EIRS.Common.GlobalDefaultValues.VersionNumber"></script>
}




