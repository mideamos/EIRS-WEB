@model EIRS.Models.VehicleViewModel

@{
    ViewBag.Title = "Vehicle Details";
}

<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-lg fa-fw fa-automobile"></i>
                Vehicles
            </h1>
        </div>
        <div class="col-xs-12 col-sm-5 text-right">
        </div>
    </div>
    <section id="widget-grid">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
                <div class="jarviswidget jarviswidget-color-green" id="dvVehicleDetails">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-eye"></i> </span>
                        <h2>Vehicle</h2>
                    </header>
                    <div class="content">
                        <div class="jarviswidget-editbox">
                            <input class="form-control" type="text">
                        </div>
                        <div class="widget-body">
                            <div class="form-horizontal">
                                <fieldset>
                                    <legend>Vehicle Details</legend>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label control-label-static">Vehicle RIN</label>
                                        <div class="col-md-10 form-control-static">
                                            @Model.VehicleRIN
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label control-label-static">Vehicle Reg Number</label>
                                        <div class="col-md-10 form-control-static">
                                            @Model.VehicleRegNumber
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label control-label-static">VIN</label>
                                        <div class="col-md-10 form-control-static">
                                            @Model.VIN
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label control-label-static">Vehicle Description</label>
                                        <div class="col-md-10 form-control-static">
                                            @Model.VehicleDescription
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label control-label-static">Asset Type</label>
                                        <div class="col-md-10 form-control-static">
                                            @Model.AssetTypeName
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label control-label-static">Vehicle Type</label>
                                        <div class="col-md-10 form-control-static">
                                            @Model.VehicleTypeName
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label control-label-static">Vehicle Sub Type</label>
                                        <div class="col-md-10 form-control-static">
                                            @Model.VehicleSubTypeName
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label control-label-static">LGA</label>
                                        <div class="col-md-10 form-control-static">
                                            @Model.LGAName
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label control-label-static">Vehicle Purpose</label>
                                        <div class="col-md-10 form-control-static">
                                            @Model.VehiclePurposeName
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label control-label-static">Vehicle Function</label>
                                        <div class="col-md-10 form-control-static">
                                            @Model.VehicleFunctionName
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label control-label-static">Vehicle Ownership</label>
                                        <div class="col-md-10 form-control-static">
                                            @Model.VehicleOwnershipName
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label control-label-static">Status</label>
                                        <div class="col-md-10 form-control-static">
                                            @Model.ActiveText
                                        </div>
                                    </div>
                                </fieldset>

                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <a class="btn btn-default" href="@Url.Action("List","Vehicle")">
                                                Back
                                            </a>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
