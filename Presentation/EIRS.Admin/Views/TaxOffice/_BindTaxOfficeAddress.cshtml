@model IList<TaxOfficeAddress>
@using EIRS.Common

@if (Model.Count > 0)
{
    foreach (var item in Model)
    {
        <tr>
            <td>@item.AddressTypeName</td>
            <td>@item.BuildingRIN</td>
            <td>@item.BuildingName</td>
            <td>
                <div class="btn-group">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                        &nbsp;&nbsp; Actions
                        <span class="caret"></span>&nbsp;&nbsp;
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a onclick="javascript:jsfn_ShowBuildingDetails(@item.BuildingID)">
                                View
                            </a>
                        </li>
                        <li>
                            <a onclick="javascript:jsfn_RemoveAddressDetails(@item.RowID)">
                                Remove
                            </a>
                        </li>
                    </ul>
                </div>
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="4" align="center">No Records Found.</td>
    </tr>
}