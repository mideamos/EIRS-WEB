@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Verify TCC";
    ViewBag.MenuID = 7;
}

<section class="alternate">
    <div class="container">

        <div class="title">
            <h1>
                Revenue Services Hub: Edo Revenue Administration System
            </h1>
            <hr>
            <p>
                Kindly interact with EIRS on a wide range of revenue administrator services to assist you better.
            </p>
        </div>

        <div class="row custom-tabs">
            <div class="col-sm-3">
                <div class="portlet light compressed-menu">
                    <div class="portlet-title">
                        <div class="caption">
                            Revenue Services Hub
                        </div>
                    </div>
                    <div class="portlet-body">
                        <ul class="nav">
                            <li>
                                <a href="@Url.Action("PayTaxes","CBS")"><i class="fa fa-angle-right"></i> Pay Your Taxes</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-sm-9">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="portlet light">
                            <div class="portlet-title">
                                <div class="caption">
                                    Verify via File Upload
                                </div>
                            </div>
                            <div class="portlet-body">
                                <div class="link-box-data">
                                    <p>
                                        If you have received a notification of assessment or a service bill, please enter the reference number here.
                                    </p>
                                    <br /><br />
                                    <div class="form-group">
                                        <a href="@Url.Action("VerifyFileUpload","VerifyTCC")" class="btn btn-redtheme btn-block"> Verify </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="portlet light">
                            <div class="portlet-title">
                                <div class="caption">
                                    Verify via Reference Number
                                </div>
                            </div>
                            <div class="portlet-body">
                                <div class="link-box-data">
                                    <p>
                                        You can also deposit money into your ERAS Tax Account which can then be applied to any upcoming taxes you may be liable for.
                                    </p>
                                    <br />
                                    <div class="form-group">
                                        <a href="@Url.Action("VerifyReferenceNumber","VerifyTCC")" class="btn btn-redtheme btn-block"> Verify </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>