
@{
    ViewBag.Title = "Settlement Transaction List";
}

<div class="title">
    <h1>
        Settle - List All Transaction
    </h1>
    <hr>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            Search Transactions
        </div>
    </div>
    <div class="portlet-body">
        <div class="row">
            <div class="col-sm-7">
                <div class="form-horizontal" id="frmSettlementTransactionList">
                    <div class="form-group">
                        <label class="col-md-4 control-label">From Date:</label>
                        <div class="col-md-8">
                            @Html.TextBox("txtFromDate", "", new { @class = "form-control", @id = "txtFromDate", @autocomplete = "off", tabindex = "1", @placeholder = "Enter From Date" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">To Date:</label>
                        <div class="col-md-8">
                            @Html.TextBox("txtToDate", "", new { @class = "form-control", @id = "txtToDate", @autocomplete = "off", tabindex = "2", @placeholder = "Enter To Date" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Transaction Type:</label>
                        <div class="col-md-8">
                            @Html.DropDownList("cboTransactionType", (IList<SelectListItem>)ViewBag.TransactionTypeList, "All Transaction Types", new { @id = "cboTransactionType", @class = "form-control bs-select", @tabindex = "3" })
                        </div>
                    </div>
                    <div class="form-group text-right row">
                        <div class="col-sm-6"></div>
                        <div class="col-sm-6">
                            <button class="btn btn-theme btn-block" id="btnSearch"> Search </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-5">
                
            </div>
        </div>
    </div>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">Transaction List</div>
        
    </div>
    <div class="portlet-body">
        <table class="dt-responsive table table-bordered v-middle" width="100%" id="tblSettlementTransaction">
            <thead class="red-th">
                <tr>
                    <th>Reference No</th>
                    <th>Tax Payer</th>
                    <th>Transaction Type</th>
                    <th class="none">Settlement Method</th>
                    <th>Amount</th>
                    <th>Transaction Date</th>
                    <th class="action-th all">Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>



@section Footer {
    <script type="text/javascript" src="~/Scripts/jsSettleTransactionList.js?v=@EIRS.Common.GlobalDefaultValues.VersionNumber"></script>
}



