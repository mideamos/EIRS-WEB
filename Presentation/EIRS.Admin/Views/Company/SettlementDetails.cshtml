@model EIRS.BOL.usp_GetSettlementList_Result
@using EIRS.Common
@using EIRS.BOL

@{
    ViewBag.Title = "Settlement Details";
    IList<usp_GetSettlementItemList_Result> lstSettlementItems = (IList<usp_GetSettlementItemList_Result>)ViewBag.SettlementItemList;
}

<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-lg fa-fw fa-life-saver"></i>
                Settlement Details
            </h1>
        </div>
        <div class="col-xs-12 col-sm-5 text-right">
        </div>
    </div>
    <section id="widget-grid">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
                <div class="jarviswidget jarviswidget-color-green" id="dvSettlementDetails">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-eye"></i> </span>
                        <h2>Settlement</h2>
                    </header>
                    <div class="content">
                        <div class="jarviswidget-editbox">
                            <input class="form-control" type="text">
                        </div>
                        <div class="widget-body">
                            <div class="form-horizontal">
                                <fieldset>
                                    <legend>Settlement Details</legend>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label control-label-static">Settlement Ref No</label>
                                        <div class="col-md-10 form-control-static">
                                            @Model.SettlementRefNo
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label control-label-static">Settlement Date</label>
                                        <div class="col-md-10 form-control-static">
                                            @CommUtil.GetFormatedDate(Model.SettlementDate)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label control-label-static">Assessment / Service Bill Ref No</label>
                                        <div class="col-md-10 form-control-static">
                                            @Model.ASRefNo
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label control-label-static">Settlement Amount</label>
                                        <div class="col-md-10 form-control-static">
                                            @Model.SettlementAmount.GetValueOrDefault().ToString("N2")
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label control-label-static">Settlement Notes</label>
                                        <div class="col-md-10 form-control-static">
                                            @Model.SettlementNotes
                                        </div>
                                    </div>
                                    <section>
                                        <table id="tbSettlementItem" class="table table-striped table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>Rule / Service Name</th>
                                                    <th>Item Name </th>
                                                    <th>Settlement Amount</th>
                                                </tr>
                                            </thead>
                                            <tbody id="tbodySettlementItemList">
                                                @foreach (var item in lstSettlementItems)
                                                {
                                                    <tr>
                                                        <td>@item.AssessmentRuleName</td>
                                                        <td>@item.AssessmentItemName</td>
                                                        <td>@item.SettlementAmount.GetValueOrDefault().ToString("N2")</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </section>
                                </fieldset>

                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <a class="btn btn-default" href="@Url.Action("SettlementList","Company", new { id = Model.TaxPayerID, name = Model.TaxPayerRIN.ToSeoUrl() })">
                                                Back
                                            </a>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

