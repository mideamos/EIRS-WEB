
@{
    ViewBag.Title = "LateChargeDetail";
}

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption"><h2>Late Charge Step I</h2></div>
        <div class="actions">

        </div>
    </div>
    <div class="portlet-body">

        <div id="divLoader" style="display:none;">
            <img src="~/Content/Images/microsoft-loading.gif" alt="Loader" />
            <h2>Hold On While We Fetch Your Records</h2>
        </div>
        <div id="divButton">
            <button type="button" id="btnSubmit" style="height:50px; width:800px; " class="btn btn-default btn-danger" onclick="location.href='@Url.Action("LateChargeDetailII", "OperationManager", new {step=1})'">STEP 1</button>

        </div>
    </div>
</div>



@section footer {
    <script type="text/javascript" src="~/Scripts/LateCharge.js"></script>
}