@model IList<EIRS.BOL.usp_GetCompanyList_Result>

@{
    ViewBag.Title = "Company List";
}

<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-lg fa-fw fa-archive"></i>
                Company
            </h1>
        </div>
        <div class="col-xs-12 col-sm-5 text-right">
            <a href="@Url.Action("Add","Company")" class="btn btn-default">
                Add Company
            </a>
        </div>
    </div>
    <section id="widget-grid">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-green" data-id="dvCompanyList">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Company List </h2>
                        <div class="widget-toolbar">
                            <a href="@Url.Action("Add","Company")" class="btn btn-primary">Add Company </a>
                        </div>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                            <input class="form-control" type="text">
                        </div>
                        <div class="widget-body no-padding">
                            <table id="tbCompany" class="table table-striped table-bordered" width="100%">
                                <thead>
                                    <tr>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Company RIN" id="txtCompanyRIN"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Company Name" id="txtCompanyName"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter TIN" id="txtCompanyTIN"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Mobile Number 1" id="txtMobileNum1"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Mobile Number 2" id="txtMobileNum2"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Email Address 1" id="txtEmailAddress1"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Email Address 2" id="txtEmailAddress2"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Tax Office" id="txtTaxOffice"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Tax Payer Type" id="txtPayerType"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Economic Activity" id="txtEconomicActivity"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Notification Method" id="txtNotificationMethod"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Status" id="txtStatus"/>
                                        </th>
                                        <th style="width:10%"></th>
                                    </tr>
                                    <tr>
                                        <th data-class="expand">Company RIN</th>
                                        <th>Company Name</th>
                                        <th>TIN</th>
                                        <th>Mobile Number 1</th>
                                        <th>Mobile Number 2</th>
                                        <th>Email Address 1</th>
                                        <th>Email address 2</th>
                                        <th>Tax Office</th>
                                        <th>Tax Payer Type</th>
                                        <th>Economic Activity</th>
                                        <th>Notification Method</th>
                                        <th>Tax Payer Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

<div id="dvProfileInformation" title="Profile Information">
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="control-label control-label-static">Tax Payer RIN</label>
                <div id="dvPITaxPayerRIN">

                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="control-label control-label-static">Tax Payer Name</label>
                <div id="dvPITaxPayerName">

                </div>
            </div>
        </div>
        <div class="col-sm-12" id="dvProfileList">

        </div>
    </div>
</div>

<div id="dvAssessmentRuleInformation" title="Assessment Rule Information">
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="control-label control-label-static">Tax Payer RIN</label>
                <div id="dvARITaxPayerRIN">

                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="control-label control-label-static">Tax Payer Name</label>
                <div id="dvARITaxPayerName">

                </div>
            </div>
        </div>
        <div class="col-sm-12" id="dvAssessmentRuleList">

        </div>
    </div>
</div>

@section Footer {
    <script type="text/javascript" src="~/Scripts/jsCompanyList.js"></script>
   
}

