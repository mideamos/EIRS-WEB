<div class="modal fade" id="dvBuildingUnitModal" tabindex="-1" role="dialog" aria-labelledby="dvBuildingUnitModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h4 class="modal-title" id="dvBuildingUnitModalLabel">Add Unit</h4>
            </div>
            <div class="modal-body">
                <form id="frmBuildingUnit">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Unit Number</label>
                                @Html.TextBox("txtUnitNumber", "", new { @class = "form-control", @placeholder = "Enter Unit Number", @tabindex = "101", @id = "txtUnitNumber" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Unit Purpose</label>
                                @Html.DropDownList("cboUnitPurpose", (SelectList)ViewBag.UnitPurposeList, "Select Unit Purpose", htmlAttributes: new { @tabindex = "102", @class = "form-control bs-select", @id = "cboUnitPurpose" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Unit Function</label>
                                @Html.DropDownList("cboUnitFunction", (SelectList)ViewBag.UnitFunctionList, "Select Unit Function", htmlAttributes: new { @tabindex = "103", @class = "form-control bs-select", @id = "cboUnitFunction" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Unit Occupancy</label>
                                @Html.DropDownList("cboUnitOccupancy", (SelectList)ViewBag.UnitOccupancyList, "Select Unit Occupancy", htmlAttributes: new { @tabindex = "104", @class = "form-control bs-select", @id = "cboUnitOccupancy" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Unit Size</label>
                                @Html.DropDownList("cboSize", (SelectList)ViewBag.SizeList, "Select Unit Size", htmlAttributes: new { @tabindex = "105", @class = "form-control bs-select", @id = "cboSize" })
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-theme" id="btnSaveBuildingUnit"> Save</button>
            </div>
        </div>
    </div>
</div>


