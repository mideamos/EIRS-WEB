@model IList<EIRS.BOL.usp_GetSpecialList_Result>

@{
    ViewBag.Title = "Special List";
}

<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-lg fa-fw fa-archive"></i>
                Special
            </h1>
        </div>
        <div class="col-xs-12 col-sm-5 text-right">
            <a href="@Url.Action("Add","Special")" class="btn btn-default">
                Add Special
            </a>
        </div>
    </div>
    <section id="widget-grid">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-green" data-id="dvSpecialList">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Special List </h2>
                        <div class="widget-toolbar">
                            <a href="@Url.Action("Add","Special")" class="btn btn-primary">Add Special </a>
                        </div>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                            <input class="form-control" type="text">
                        </div>
                        <div class="widget-body no-padding">
                            <table id="tbSpecial" class="table table-striped table-bordered" width="100%">
                                <thead>
                                    <tr>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Special RIN" id="txtSpecialRIN"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Special Tax Payer Name" id="txtSpecialTaxPayerName"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Special TIN" id="txtSpecialTIN"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Tax Office" id="txtTaxOffice"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Tax Payer Type" id="txtTaxPayerType"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Contact Name" id="txtContactName"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Contact Email" id="txtContactEmailAddress"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Contact Number" id="txtContactNumber"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Description" id="txtDescription"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Notification Method" id="txtNoitificationMethodName"/>
                                        </th>
                                        <th class="hasinput" style="width:10%">
                                            <input type="text" class="form-control" placeholder="Filter Status" id="txtStatus"/>
                                        </th>
                                        <th style="width:10%"></th>
                                    </tr>
                                    <tr>
                                        <th data-class="expand">Special RIN</th>
                                        <th>Special Tax Payer Name</th>
                                        <th>TIN</th>
                                        <th>Tax Office</th>
                                        <th>Tax Payer Type</th>
                                        <th>Contact Name</th>
                                        <th>Contact Email</th>
                                        <th>Contact Number</th>
                                        <th>Description</th>
                                        <th>Notification Method</th>
                                        <th>Tax Payer Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

<div id="dvProfileInformation" title="Profile Information">
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="control-label control-label-static">Tax Payer RIN</label>
                <div id="dvPITaxPayerRIN">

                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="control-label control-label-static">Tax Payer Name</label>
                <div id="dvPITaxPayerName">

                </div>
            </div>
        </div>
        <div class="col-sm-12" id="dvProfileList">

        </div>
    </div>
</div>

<div id="dvAssessmentRuleInformation" title="Assessment Rule Information">
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="control-label control-label-static">Tax Payer RIN</label>
                <div id="dvARITaxPayerRIN">

                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="control-label control-label-static">Tax Payer Name</label>
                <div id="dvARITaxPayerName">

                </div>
            </div>
        </div>
        <div class="col-sm-12" id="dvAssessmentRuleList">

        </div>
    </div>
</div>

@section Footer {
    <script type="text/javascript" src="~/Scripts/jsSpecialList.js"></script>
}

